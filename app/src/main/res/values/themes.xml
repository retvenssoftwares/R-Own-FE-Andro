<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rown" parent="Theme.MaterialComponents.NoActionBar.Bridge">
    
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ADD134</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Rown_Splash" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorOnPrimary">#ADD134</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="colorPrimaryVariant">@color/green_own</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:layoutDirection">ltr</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DailogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
    </style>

    <style name="Theme.AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle"> @style/CustomBottomSheetStyle </item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background"> @drawable/top_round </item>
    </style>

</resources>