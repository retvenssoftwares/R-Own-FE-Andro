<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".NavigationFragments.eventsForHoteliers.EvenDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/community_btn"
            app:tint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an Event"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_backBtn"
            app:layout_constraintBottom_toBottomOf="@id/profile_backBtn"
            app:layout_constraintStart_toEndOf="@id/profile_backBtn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative"/>

    <LinearLayout
        android:id="@+id/lle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/relative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter the details about your event"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Thumbnail"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_regular"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/grey_5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/cover_event_post"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:background="@color/grey_5"
                    app:shapeAppearance="@style/SquareCornerImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/cover_event_upload"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:src="@drawable/svg_upload"
                    app:shapeAppearance="@style/SquareCornerImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:layout_marginHorizontal="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event start and end date &amp; time"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_regular"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/grey_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Starts On"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginTop="8dp"
                    app:cardElevation="3dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardBackgroundColor="@color/white">
                    <TextView
                        android:id="@+id/selectEventStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textColor="@color/black"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:drawableEnd="@drawable/svg_event"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white">
                    <TextView
                        android:id="@+id/selectEventStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Time"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:drawableEnd="@drawable/svg_watch"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="8dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/grey_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ends On"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginTop="8dp"
                    app:cardElevation="3dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardBackgroundColor="@color/white">
                    <TextView
                        android:id="@+id/selectEventEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:background="@null"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:drawableEnd="@drawable/svg_event"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white">
                    <TextView
                        android:id="@+id/selectEventEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Time"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:background="@null"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:drawableEnd="@drawable/svg_watch"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/black"
            android:layout_marginHorizontal="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration start and end date &amp; time"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_regular"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/grey_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Starts On"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginTop="8dp"
                    app:cardElevation="3dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardBackgroundColor="@color/white">
                    <TextView
                        android:id="@+id/registrationStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:background="@null"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:drawableEnd="@drawable/svg_event"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white">
                    <TextView
                        android:id="@+id/registrationStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Time"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:background="@null"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:drawableEnd="@drawable/svg_watch"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="8dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/grey_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ends On"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/montserrat_regular"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginTop="8dp"
                    app:cardElevation="3dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardBackgroundColor="@color/white">
                    <TextView
                        android:id="@+id/registrationEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:drawableEnd="@drawable/svg_event"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white">
                    <TextView
                        android:id="@+id/registrationEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Time"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:drawableEnd="@drawable/svg_watch"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/next_Event_Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toBottomOf="@id/lle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="10dp"
            android:paddingHorizontal="17dp"
            android:textAlignment="center"
            android:text="Next"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18dp"
            android:background="@color/green_own"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>