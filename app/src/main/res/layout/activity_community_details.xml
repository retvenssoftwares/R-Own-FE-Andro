<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".communityDetails.CommunityDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#272A3D"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/community_detail_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/community_btn"
            app:tint="@color/green_own"
            app:layout_constraintBottom_toBottomOf="@id/community_detail_addBtn"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/community_detail_editBtn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignEnd="@id/community_detail_addBtn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/svg_edit_pencil"
            app:tint="@color/green_own"
            app:layout_constraintEnd_toStartOf="@id/community_detail_addBtn"
            app:layout_constraintBottom_toBottomOf="@id/community_detail_addBtn"
            app:layout_constraintTop_toTopOf="@id/community_detail_addBtn"/>

        <ImageView
            android:id="@+id/community_detail_addBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@id/community_detail_deleteBtn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/svg_add_user"
            app:tint="@color/green_own"
            app:layout_constraintEnd_toStartOf="@id/community_detail_deleteBtn"
            app:layout_constraintBottom_toBottomOf="@id/community_detail_deleteBtn"
            app:layout_constraintTop_toTopOf="@id/community_detail_deleteBtn"/>

        <ImageView
            android:id="@+id/community_detail_deleteBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/delete_svg"
            app:tint="@color/green_own"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/community_profile"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            tools:src="@drawable/png_cover"/>

        <TextView
            android:id="@+id/community_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retvens Directors"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="20dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/community_detail_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 members"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="16dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:id="@+id/switchToCommunity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/green_own"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                android:background="@color/black"
                android:text="Switch to Closed Community"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Description"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/llll"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/community_Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="38dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintTop_toBottomOf="@id/llll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/community_created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created by Prashant Mishra | 06/04/2023"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/community_Description"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/lll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/grey_10"
        app:layout_constraintTop_toBottomOf="@id/community_created_by"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:id="@+id/users_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="12dp"
                android:background="@color/white"
                android:text="Users"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_weight="1"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:id="@+id/mediaText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="12dp"
                android:background="@color/grey_10"
                android:text="Media"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lll2"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Businesses in the community."
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"
                android:padding="12dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/static_card"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            app:cardCornerRadius="8dp"
            android:visibility="gone"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/personal_notification_profile"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginVertical="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:shapeAppearanceOverlay="@style/SquareCornerImage"
                    android:src="@drawable/png_vendor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/personal_notification_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Indore Food Bloggers"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintEnd_toStartOf="@id/rating_bar"
                    app:layout_constraintStart_toEndOf="@+id/personal_notification_profile"
                    app:layout_constraintTop_toTopOf="@id/personal_notification_profile" />

                <TextView
                    android:id="@+id/location_notification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Location"
                    android:textColor="@color/grey_60"
                    android:textSize="12dp"
                    android:drawableStart="@drawable/svg_navigation_location"
                    android:drawableTint="@color/black"
                    android:drawablePadding="5dp"
                    app:layout_constraintEnd_toStartOf="@id/rating_bar"
                    app:layout_constraintStart_toEndOf="@+id/personal_notification_profile"
                    app:layout_constraintTop_toBottomOf="@+id/personal_notification_name" />

                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:rating="3"
                    android:stepSize="5"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_margin="5dp"
                    android:progress="5"
                    android:progressTint="@color/quantum_yellow"
                    app:layout_constraintEnd_toStartOf="@id/users"
                    app:layout_constraintTop_toTopOf="@id/users"
                    app:layout_constraintBottom_toBottomOf="@id/users"/>

                <TextView
                    android:id="@+id/users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="12dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey_60"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/vendors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lll2"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendors in the community."
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"
                android:padding="12dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <include layout="@layout/item_businessess_in__community"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/hoteliers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoteliers in the community."
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"
                android:padding="12dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <include layout="@layout/item_businessess_in__community"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"
                android:padding="12dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <include layout="@layout/item_businessess_in__community"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>