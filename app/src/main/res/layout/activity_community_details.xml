<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".communityDetails.CommunityDetailsActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#272A3D"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/community_detail_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/community_btn"
            app:tint="@color/green_own"/>

        <ImageView
            android:id="@+id/community_detail_editBtn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignEnd="@id/community_detail_addBtn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:src="@drawable/svg_edit_pencil"
            app:tint="@color/green_own"/>

        <ImageView
            android:id="@+id/community_detail_addBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@id/community_detail_deleteBtn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/svg_add_user"
            app:tint="@color/green_own"/>

        <ImageView
            android:id="@+id/community_detail_deleteBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/delete_svg"
            app:tint="@color/green_own"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/community_profile"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            tools:src="@drawable/png_cover"/>

        <TextView
            android:id="@+id/community_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retvens Directors"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="20dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/community_detail_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 members"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="16dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:id="@+id/description_job_card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/green_own"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                android:background="@color/black"
                android:text="Switch to Closed Community"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Description"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/llll"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/community_Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="38dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintTop_toBottomOf="@id/llll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/community_created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created by Prashant Mishra | 06/04/2023"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/community_Description"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/lll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/grey_10"
        app:layout_constraintTop_toBottomOf="@id/community_created_by"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="12dp"
                android:background="@color/white"
                android:text="Users"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_weight="1"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="12dp"
                android:background="@color/grey_10"
                android:text="Media"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Businesses in the community."
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/lll2"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>