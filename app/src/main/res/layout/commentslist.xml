<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/comment_profile"
        android:layout_width="45dp"
        app:shapeAppearance="@style/RoundedCornerImage"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/dummy"
        />

    <TextView
        android:id="@+id/commented_username"
        android:text="Rahul Bhalerao"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textFontWeight="700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comment_profile"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:id="@+id/commentOfUser"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_regular"
        android:text=" This is the Comment"
        android:textColor="#8C8C8C"
        android:textFontWeight="700"
        android:textSize="16dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/comment_profile"
        app:layout_constraintTop_toBottomOf="@+id/commented_username" />



        <androidx.cardview.widget.CardView
            android:id="@+id/replyComment"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F7F7F7"
            app:layout_constraintTop_toBottomOf="@+id/commentOfUser"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/reply_vector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"
                android:textColor="#303030"
                android:layout_marginStart="20dp"
                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/replies_OnComment"
            app:layout_constraintTop_toBottomOf="@id/commentOfUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text=". replies"
            android:textColor="#8C8C8C"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/replyComment"
            android:layout_marginStart="15dp"
            />

    <TextView
        android:id="@+id/times_OnComment"
        app:layout_constraintTop_toBottomOf="@id/commentOfUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="12 min ago"
        android:textColor="#8C8C8C"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        />


    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/clockvector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentOfUser" />


    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/nestedCommentRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/replyComment" />

</androidx.constraintlayout.widget.ConstraintLayout>