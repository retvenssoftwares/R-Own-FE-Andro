<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Dashboard.createPosts.CreateTextPost">


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/createCommunity_backBtn"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:src="@drawable/community_btn" />

        <androidx.cardview.widget.CardView
            android:id="@+id/next_cumm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                android:paddingHorizontal="14dp"
                android:textAlignment="center"
                android:text="Share"
                android:fontFamily="@font/montserrat_bold"
                android:textFontWeight="600"
                android:textSize="14dp"
                android:background="@color/green_own"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative"
        android:background="@color/grey_20" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_complete_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:shapeAppearance="@style/RoundedCornerImage"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/relative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_complete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/user_complete_profile"
        app:layout_constraintStart_toEndOf="@id/user_complete_profile"
        app:layout_constraintTop_toTopOf="@id/user_complete_profile"
        app:layout_constraintVertical_bias="0.03" />

    <LinearLayout
        android:id="@+id/can_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="7dp"
        app:layout_constraintTop_toBottomOf="@id/user_complete_name"
        app:layout_constraintStart_toEndOf="@id/user_complete_profile">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_eye"
            android:paddingEnd="3dp"
            app:tint="@color/black"/>
        <TextView
            android:id="@+id/canSeeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can See"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingVertical="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textFontWeight="600"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_down_24"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/can_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_marginStart="6dp"
        android:paddingHorizontal="7dp"
        app:layout_constraintTop_toBottomOf="@id/user_complete_name"
        app:layout_constraintStart_toEndOf="@id/can_see">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"
            android:paddingEnd="3dp"
            app:tint="@color/black"/>
        <TextView
            android:id="@+id/can_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can comment"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingVertical="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textFontWeight="600"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_down_24"
            />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/whatDY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@id/user_complete_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_complete_profile">
        <EditText
            android:id="@+id/whatDYEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What do you want to share today ?"
            android:textColorHint="@color/grey_40"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Body1"
            android:background="@null"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/syjh"/>
    </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       app:layout_constraintStart_toStartOf="parent"
       android:layout_width="270dp"
       android:layout_height="290dp"
       android:layout_marginBottom="300dp"
       app:cardBackgroundColor="@color/white"
       app:cardCornerRadius="25dp"
       app:cardElevation="6dp"
       android:layout_margin="6dp"
       app:layout_constraintTop_toBottomOf="@+id/whatDY"
       >

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <com.google.android.material.imageview.ShapeableImageView
               android:id="@+id/Event_image"
               android:layout_width="match_parent"
               android:layout_height="160dp"
               android:layout_margin="8dp"
               android:layout_marginTop="96dp"
               android:elevation="8dp"
               android:scaleType="centerCrop"
               android:src="@drawable/png_blog"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:shapeAppearanceOverlay="@style/SquareCornerImageForCards" />

           <androidx.cardview.widget.CardView
               android:id="@+id/card_blog_type"
               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_margin="6dp"
               app:cardCornerRadius="16dp"
               app:cardElevation="8dp"
               android:visibility="gone"
               app:layout_constraintStart_toStartOf="@id/Event_image"
               app:layout_constraintTop_toTopOf="@id/Event_image">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/white"
                   android:fontFamily="@font/montserrat_semibold"
                   android:maxLines="1"
                   android:paddingHorizontal="12dp"
                   android:paddingVertical="5dp"
                   android:singleLine="true"
                   android:text="Concert"
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textSize="12dp" />

           </androidx.cardview.widget.CardView>

           <ImageView
               android:visibility="gone"
               android:id="@+id/blogs_card_like"
               android:layout_width="50dp"
               android:layout_height="44dp"
               android:elevation="10dp"
               android:src="@drawable/svg_like"
               app:layout_constraintEnd_toEndOf="@id/Event_image"
               app:layout_constraintTop_toTopOf="@id/Event_image" />

           <TextView
               android:id="@+id/Event_title"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="6dp"
               android:layout_marginTop="8dp"
               android:fontFamily="@font/montserrat_semibold"
               android:text="Radiohead Concert"
               android:textColor="@color/black"
               android:textSize="14dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="@id/Event_image"
               app:layout_constraintTop_toBottomOf="@id/Event_image" />




           <com.google.android.material.imageview.ShapeableImageView
               android:id="@+id/blogger_profile"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="5dp"
               android:src="@drawable/svg_add_bg"
               app:layout_constraintStart_toStartOf="@id/Event_image"
               app:layout_constraintTop_toBottomOf="@id/Event_title"
               app:shapeAppearanceOverlay="@style/RoundedCornerImage" />

           <TextView
               android:id="@+id/blogger"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="6dp"
               android:fontFamily="@font/montserrat_regular"
               android:text="Adventures Paul"
               android:textColor="@color/black"
               android:textSize="9dp"
               app:layout_constraintBottom_toBottomOf="@id/blogger_profile"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@id/blogger_profile"
               app:layout_constraintTop_toTopOf="@id/blogger_profile" />

           <View
               android:id="@+id/view"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginHorizontal="30dp"
               android:layout_marginTop="14dp"
               android:background="@color/grey_20"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/blogger" />

           <TextView
               android:id="@+id/event_participants"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="20dp"
               android:layout_marginBottom="14dp"
               android:fontFamily="@font/montserrat_semibold"
               android:text="Concert"
               android:textColor="@color/green_own"
               android:textSize="10dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent" />



           <TextView
               android:id="@+id/blog_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="14dp"
               android:layout_marginBottom="14dp"
               android:fontFamily="@font/montserrat_regular"
               android:text="22 Oct, 2022"
               android:textColor="@color/grey_40"
               android:textSize="10dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent" />

       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>