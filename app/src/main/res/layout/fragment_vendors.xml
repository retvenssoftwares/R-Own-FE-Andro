<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Dashboard.profileCompletion.frags.VendorsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/use_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:paddingHorizontal="22dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Your information helps you discover new community, peoples and jobs"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_round"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/round_img"
        app:tint="@color/black"
        android:layout_marginStart="22dp"
        android:padding="3dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/use_text"
        app:layout_constraintTop_toBottomOf="@id/use_text"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/hotel_vendor_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/svg_vendor"
        app:shapeAppearance="@style/RoundedCornerImage"
        android:scaleType="centerCrop"
        android:layout_marginStart="22dp"
        android:padding="3dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/use_text"
        app:layout_constraintTop_toBottomOf="@id/use_text"/>
    <ImageView
        android:id="@+id/camera_vendor"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/camera_img_black"
        app:layout_constraintBottom_toBottomOf="@id/hotel_vendor_profile"
        app:layout_constraintEnd_toEndOf="@id/hotel_vendor_profile"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="Tell People How Your Brands Look’s LikeTell People How Your Brands Look’s Like"
        android:textColor="@color/grey_60"
        android:paddingStart="8dp"
        android:paddingEnd="15dp"
        android:textFontWeight="600"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hotel_vendor_profile"
        app:layout_constraintBottom_toBottomOf="@id/hotel_vendor_profile"
        app:layout_constraintTop_toTopOf="@id/hotel_vendor_profile" />


    <LinearLayout
        android:id="@+id/ll_stud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/hotel_vendor_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/brand_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Brand Name"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            android:layout_marginHorizontal="20dp"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/brand_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/brand_desc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Description"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/brand_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/serviceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Services in your brand woks"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            app:boxStrokeWidthFocused="2dp"
            app:endIconDrawable="@drawable/ic_arrow_down_24"
            app:endIconMode="custom"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vendor_services_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:text="Select Services"
                android:clickable="true"
                android:focusable="false"
                android:editable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/portfolio_link_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Portfolio Link"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_marginHorizontal="20dp"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/portfolio_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:hint="https://example.com/portfolio"
                android:textColorHint="@drawable/hint_selector"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/website_link_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Website Link"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/website_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:hint="https://example.com"
                android:textColorHint="@drawable/hint_selector"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Portfolio Images :"
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">


            <ImageView
                android:id="@+id/delete_img1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/svg_cross"
                android:visibility="gone"
                android:elevation="5dp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-15dp"
                app:layout_constraintEnd_toEndOf="@id/img_1"
                app:layout_constraintBottom_toTopOf="@id/img_1"/>
            <ImageView
                android:id="@+id/img_1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/delete_img2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/svg_cross"
                android:visibility="gone"
                android:elevation="5dp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-15dp"
                app:layout_constraintEnd_toEndOf="@id/img_2"
                app:layout_constraintBottom_toTopOf="@id/img_2"/>
            <ImageView
                android:id="@+id/img_2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@id/img_1"
                app:layout_constraintTop_toTopOf="@id/img_1"
                app:layout_constraintBottom_toBottomOf="@id/img_1"/>


            <ImageView
                android:id="@+id/delete_img3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/svg_cross"
                android:visibility="gone"
                android:elevation="5dp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-15dp"
                app:layout_constraintEnd_toEndOf="@id/img_3"
                app:layout_constraintBottom_toTopOf="@id/img_3"/>
            <ImageView
                android:id="@+id/img_3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@id/img_2"
                app:layout_constraintTop_toTopOf="@id/img_2"
                app:layout_constraintBottom_toBottomOf="@id/img_1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_job_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="45dp"
        app:cardElevation="6dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="11dp"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintTop_toBottomOf="@id/ll_stud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:text="Next"
            android:fontFamily="@font/montserrat_regular"
            android:textFontWeight="600"
            android:textSize="22dp"
            android:background="@color/green_own"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>