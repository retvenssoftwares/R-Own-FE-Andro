<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/personal_notification_profile"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/SpecificCornerRounded"
            android:src="@drawable/svg_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/personal_notification_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Indore Food Bloggers"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@id/users"
            app:layout_constraintStart_toEndOf="@+id/personal_notification_profile"
            app:layout_constraintTop_toTopOf="@id/personal_notification_profile" />

        <TextView
            android:id="@+id/location_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Location"
            android:textColor="@color/grey_60"
            android:textSize="12dp"
            android:drawableStart="@drawable/svg_navigation_location"
            android:drawableTint="@color/black"
            android:drawablePadding="5dp"
            app:layout_constraintStart_toEndOf="@+id/personal_notification_profile"
            app:layout_constraintTop_toBottomOf="@+id/personal_notification_name" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/svg_users"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toStartOf="@id/users"
            app:layout_constraintTop_toTopOf="@id/users"
            app:layout_constraintBottom_toBottomOf="@id/users"/>

        <TextView
            android:id="@+id/users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/green_own"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/ca_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/green_own"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/personal_notification_profile"
            app:layout_constraintTop_toBottomOf="@+id/location_notification" >

            <TextView
                android:id="@+id/connection_notification_accept"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="4dp"
                android:paddingHorizontal="12dp"
                android:background="@color/green_own"
                android:text="Chat"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ca_decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/ca_accept"
            app:layout_constraintTop_toBottomOf="@+id/location_notification" >

            <TextView
                android:id="@+id/connection_notification_decline"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="4dp"
                android:paddingHorizontal="12dp"
                android:background="@color/white"
                android:text="View"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey_60"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/ca_decline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>