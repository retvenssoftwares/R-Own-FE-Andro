<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="6dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_recent_job"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/png_blog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/SquareCornerImage" />

    <TextView
        android:id="@+id/recent_job_designation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Senior UI Designer"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_recent_job"
        app:layout_constraintEnd_toStartOf="@id/save_recent"
        app:layout_constraintStart_toEndOf="@id/profile_recent_job"
        app:layout_constraintTop_toTopOf="@id/profile_recent_job"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/recent_job_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Shahpura â€¢ Jakarta, Indonesia"
        android:textColor="@color/grey_60"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_recent_job"
        app:layout_constraintEnd_toStartOf="@id/save_recent"
        app:layout_constraintStart_toEndOf="@id/profile_recent_job"
        app:layout_constraintTop_toBottomOf="@id/recent_job_designation"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/save_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:src="@drawable/svg_jobs_explore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recent_job_designation" />


    <LinearLayout
        android:id="@+id/linear_layout_recent_jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/profile_recent_job"
        app:layout_constraintTop_toBottomOf="@+id/profile_recent_job">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_layout">

            <TextView
                android:id="@+id/jobs_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:fontFamily="@font/montserrat_semibold"
                android:maxWidth="110dp"
                android:minWidth="90dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="8dp"
                android:text="Fulltime"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_layout">

            <TextView
                android:id="@+id/jobs_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:fontFamily="@font/montserrat_semibold"
                android:maxWidth="110dp"
                android:minWidth="90dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="8dp"
                android:text="Remote"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/montserrat_semibold"
        android:paddingHorizontal="2dp"
        android:text="15K"
        android:textAlignment="center"
        android:textColor="@color/green_own"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/linear_layout_recent_jobs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/linear_layout_recent_jobs" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_20"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_recent_jobs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>