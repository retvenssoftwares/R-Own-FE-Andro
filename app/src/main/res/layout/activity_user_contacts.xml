<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".authentication.UserContacts">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="-4dp"
        android:src="@drawable/background_contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/background_contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:textSize="44dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.63"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:id="@+id/text2s"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintStart_toStartOf="@id/text_contact"
        app:layout_constraintTop_toBottomOf="@id/text_contact">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay connected with ease, \nsync your contacts now!"
            android:textSize="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/grey_20"
            android:layout_margin="10dp"/>
    </ScrollView>

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skip"
        android:textSize="20dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/green_own"
        android:fontFamily="@font/montserrat_bold"
        android:background="@drawable/intrest_item"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/text2s"
        app:layout_constraintStart_toStartOf="@id/text2s"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/go_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Go Demo"
        android:textSize="20dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:background="@drawable/intrest_item"
        android:backgroundTint="@color/green_own"
        app:layout_constraintStart_toEndOf="@id/skip"
        app:layout_constraintBottom_toBottomOf="@id/skip"/>

</androidx.constraintlayout.widget.ConstraintLayout>