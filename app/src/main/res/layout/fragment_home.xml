<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Dashboard.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/create_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="3dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginVertical="12dp"
                        android:layout_marginStart="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="12dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/add_bg"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/svg_add_bg"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/community_btn"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginHorizontal="30dp"
                                android:src="@drawable/svg_add"
                                app:layout_constraintBottom_toBottomOf="@id/add_bg"
                                app:layout_constraintEnd_toEndOf="@id/add_bg"
                                app:layout_constraintStart_toStartOf="@id/add_bg"
                                app:layout_constraintTop_toTopOf="@id/add_bg" />

                            <TextView
                                android:id="@+id/t"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Create your own COMMUNITY"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="9dp"
                                app:layout_constraintEnd_toEndOf="@id/add_bg"
                                app:layout_constraintStart_toStartOf="@id/add_bg"
                                app:layout_constraintTop_toBottomOf="@id/add_bg" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:background="@color/black"
                                android:fontFamily="@font/montserrat_bold"
                                android:paddingVertical="5dp"
                                android:text="CREATE"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="11dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/t" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerCommunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/create_cummunity_item" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginVertical="12dp"
                        android:layout_marginStart="7dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="12dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/view_all_bg"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/svg_add_bg"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/community_view_all_bg_btn"
                                android:layout_width="59dp"
                                android:layout_height="59dp"
                                android:layout_marginHorizontal="20dp"
                                android:src="@drawable/ic_right_arrow"
                                app:tint="@color/white"
                                app:layout_constraintBottom_toBottomOf="@id/view_all_bg"
                                app:layout_constraintEnd_toEndOf="@id/view_all_bg"
                                app:layout_constraintStart_toStartOf="@id/view_all_bg"
                                app:layout_constraintTop_toTopOf="@id/view_all_bg" />

                            <TextView
                                android:id="@+id/tt"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="View all communities"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="9dp"
                                app:layout_constraintEnd_toEndOf="@id/view_all_bg"
                                app:layout_constraintStart_toStartOf="@id/view_all_bg"
                                app:layout_constraintTop_toBottomOf="@id/view_all_bg" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:background="@color/black"
                                android:fontFamily="@font/montserrat_bold"
                                android:paddingVertical="5dp"
                                android:text="View"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="11dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tt" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_scroll"
                app:layout_constraintVertical_bias="0.5" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>