<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:id="@+id/postCard"
    app:cardElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/post_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:layout_marginTop="7dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/png_profile_post"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_name_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Karsten Dobrev"
        android:textSize="15dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintTop_toTopOf="@id/post_profile"
        app:layout_constraintBottom_toBottomOf="@id/post_profile"
        app:layout_constraintStart_toEndOf="@id/post_profile"/>

    <TextView
        android:id="@+id/post_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Influencer"
        android:textSize="11dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        app:layout_constraintStart_toStartOf="@id/user_name_post"
        app:layout_constraintTop_toBottomOf="@id/user_name_post"/>

    <TextView
        android:id="@+id/post_user_dominican"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dominican Republic"
        android:textSize="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        app:layout_constraintStart_toStartOf="@id/user_name_post"
        app:layout_constraintTop_toBottomOf="@id/post_user_type"/>

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2W"
        android:textSize="11dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        app:layout_constraintTop_toBottomOf="@id/post_user_type"
        app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/vi"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="22dp"
            android:background="@color/grey_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/post_time"/>

            <TextView
                android:id="@+id/title_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
                android:textSize="14dp"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/vi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="7"
            android:layout_marginTop="20dp"
            android:background="@drawable/transparent_bg"
            app:layout_constraintTop_toBottomOf="@id/title_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/like_post"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:src="@drawable/svg_like_post"/>
            <ImageView
                android:id="@+id/comment"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:src="@drawable/svg_post_comment"/>
            <ImageView
                android:id="@+id/share_post"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:src="@drawable/svg_share_post"/>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:src="@drawable/svg_save_post"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>