<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".NavigationFragments.profile.EditProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/community_btn"
            app:tint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Your Profile"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_backBtn"
            app:layout_constraintBottom_toBottomOf="@id/profile_backBtn"
            app:layout_constraintStart_toEndOf="@id/profile_backBtn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relative"/>

    <ImageView
        android:id="@+id/img_round"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:src="@drawable/round_img"
        app:tint="@color/black"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/profile_img"
        app:layout_constraintBottom_toBottomOf="@id/img_round"
        app:layout_constraintEnd_toEndOf="@id/img_round"
        app:layout_constraintStart_toStartOf="@id/img_round"
        app:tint="@color/black" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_edit"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:padding="3dp"
        app:layout_constraintTop_toTopOf="@id/img_round"
        app:layout_constraintBottom_toBottomOf="@id/img_round"
        app:layout_constraintEnd_toEndOf="@id/img_round"
        app:layout_constraintStart_toStartOf="@id/img_round"/>


    <ImageView
        android:id="@+id/camera_edit"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:src="@drawable/svg_edit_profile"
        app:layout_constraintBottom_toBottomOf="@id/img_round"
        app:layout_constraintEnd_toEndOf="@id/img_round"/>

    <View
        android:id="@+id/view1"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:background="@color/green_own"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/text_h"
        app:layout_constraintBottom_toBottomOf="@id/text_h"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/text_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Change your username"
        android:textColor="@color/green_own"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/view1"
        app:layout_constraintTop_toBottomOf="@id/profile_edit"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/green_own"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/text_h"
        app:layout_constraintBottom_toBottomOf="@id/text_h"
        app:layout_constraintStart_toEndOf="@id/text_h"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/text_h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <EditText
            android:id="@+id/et_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your name"
            android:textColorHint="@color/grey_40"
            android:maxLines="1"
            android:singleLine="true"
            android:focusable="true"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Body1"
            android:background="@null"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/syjh"/>
    </androidx.cardview.widget.CardView>


    <View
        android:id="@+id/view2"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:background="@color/green_own"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/text_h2"
        app:layout_constraintBottom_toBottomOf="@id/text_h2"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/text_h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Edit your bio"
        android:textColor="@color/green_own"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/nameLayout"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/green_own"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/text_h2"
        app:layout_constraintBottom_toBottomOf="@id/text_h2"
        app:layout_constraintStart_toEndOf="@id/text_h2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bioTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_h2">
        <EditText
            android:id="@+id/bioEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec venenatis aliquam elit sit amet dignissim. "
            android:textColorHint="@color/grey_40"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Body1"
            android:background="@null"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/syjh"/>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view3"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:background="@color/green_own"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/text_h3"
        app:layout_constraintBottom_toBottomOf="@id/text_h3"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/text_h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Designation"
        android:textColor="@color/green_own"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/view3"
        app:layout_constraintTop_toBottomOf="@id/bioTIL"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/green_own"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/text_h3"
        app:layout_constraintBottom_toBottomOf="@id/text_h3"
        app:layout_constraintStart_toEndOf="@id/text_h3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/Designation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_h3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your Designation"
            android:textSize="15dp"
            android:textFontWeight="600"
            android:fontFamily="@font/montserrat_regular"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="12dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_down_24"/>

    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:background="@color/green_own"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/text_h4"
        app:layout_constraintBottom_toBottomOf="@id/text_h4"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/text_h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="How do you identify ?"
        android:textColor="@color/green_own"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/view4"
        app:layout_constraintTop_toBottomOf="@id/Designation"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/green_own"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/text_h4"
        app:layout_constraintBottom_toBottomOf="@id/text_h4"
        app:layout_constraintStart_toEndOf="@id/text_h4"
        app:layout_constraintEnd_toEndOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/ll_for_n"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_h4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="8dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textAlignment="center"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:background="@color/white"
                            android:text="Male"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_union"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="8dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textAlignment="center"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:background="@color/white"
                            android:text="Female"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_union"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="8dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textAlignment="center"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:background="@color/white"
                            android:text="Non Binary"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_union"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="8dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textAlignment="center"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:background="@color/white"
                            android:text="Prefer not to say"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_union"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/view5"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:background="@color/green_own"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/text_h5"
            app:layout_constraintBottom_toBottomOf="@id/text_h5"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/text_h5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Add Resume"
            android:textColor="@color/green_own"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/view5"
            app:layout_constraintTop_toBottomOf="@id/ll_for_n"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/green_own"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/text_h5"
            app:layout_constraintBottom_toBottomOf="@id/text_h5"
            app:layout_constraintStart_toEndOf="@id/text_h5"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/uploadResume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="16dp"
            android:textAlignment="center"
            android:drawableEnd="@drawable/ic_file_upload_white_24dp"
            android:drawableTint="@color/black"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/svg_rectangle_background"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/text_h5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="40dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/uploadResume"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="8dp"
                    android:background="@color/suggested_job_yellow"
                    android:text="Save"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>