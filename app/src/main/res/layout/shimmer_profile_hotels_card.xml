<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_venue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/hotel_venue_cover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:elevation="8dp"
                app:shapeAppearanceOverlay="@style/SquareCornerImage"
                android:src="@color/grey_20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/read_more_blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="3dp"
                android:layout_marginHorizontal="14dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="8dp"
                    android:textAlignment="center"
                    android:text="Edit"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="10dp"
                    android:background="@color/grey_40"
                    android:textColor="@color/grey_40"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/grey_10"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintStart_toStartOf="@id/hotel_venue_cover"
                app:layout_constraintEnd_toEndOf="@id/hotel_venue_cover"
                app:layout_constraintBottom_toBottomOf="@id/hotel_venue_cover">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_10"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/igl"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@color/grey_20"
                        app:tint="@color/grey_20"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/location_hotel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Location"
                        android:textColor="@color/grey_20"
                        android:background="@color/grey_20"
                        android:textSize="8dp"
                        android:layout_marginStart="3dp"
                        app:layout_constraintTop_toTopOf="@id/igl"
                        app:layout_constraintBottom_toBottomOf="@id/igl"
                        app:layout_constraintStart_toEndOf="@id/igl"/>

                    <TextView
                        android:id="@+id/venue_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginVertical="8dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Paradise Inn"
                        android:maxLines="2"
                        android:textColor="@color/grey_20"
                        android:background="@color/grey_20"
                        android:textFontWeight="600"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/location_hotel"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
