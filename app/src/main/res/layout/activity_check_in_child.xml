<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".Dashboard.createPosts.CreateTextPost">


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/createCommunity_backBtn"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:src="@drawable/community_btn" />

        <androidx.cardview.widget.CardView
            android:id="@+id/next_cumm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                android:paddingHorizontal="14dp"
                android:textAlignment="center"
                android:text="Share"
                android:fontFamily="@font/montserrat_bold"
                android:textFontWeight="600"
                android:textSize="14dp"
                android:background="@color/green_own"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative"
        android:background="@color/grey_20" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_complete_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:shapeAppearance="@style/RoundedCornerImage"
        android:src="@drawable/svg_user"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/relative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_complete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/user_complete_profile"
        app:layout_constraintStart_toEndOf="@id/user_complete_profile"
        app:layout_constraintTop_toTopOf="@id/user_complete_profile"
        app:layout_constraintVertical_bias="0.03" />

    <LinearLayout
        android:id="@+id/can_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="7dp"
        app:layout_constraintTop_toBottomOf="@id/user_complete_name"
        app:layout_constraintStart_toEndOf="@id/user_complete_profile">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_eye"
            android:paddingEnd="3dp"
            app:tint="@color/black"/>
        <TextView
            android:id="@+id/canSeeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can See"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingVertical="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textFontWeight="600"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_down_24"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/can_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_marginStart="6dp"
        android:paddingHorizontal="7dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_complete_name"
        app:layout_constraintStart_toEndOf="@id/can_see">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"
            android:paddingEnd="3dp"
            app:tint="@color/black"/>
        <TextView
            android:id="@+id/can_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can comment"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingVertical="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textFontWeight="600"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_down_24"
            />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/whatDY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@id/user_complete_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_complete_profile">
        <EditText
            android:id="@+id/whatDYEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What do you want to share today ?"
            android:textColorHint="@color/grey_40"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Body1"
            android:background="@null"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/syjh"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_event_post"
        android:layout_width="260dp"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        android:visibility="visible"
        app:cardElevation="6dp"
        android:layout_margin="6dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whatDY"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cover_event"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:elevation="8dp"
                android:layout_margin="8dp"
                app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"
                android:src="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/title_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:text="Radiohead Concert"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/cover_event"
                app:layout_constraintTop_toBottomOf="@id/cover_event"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>