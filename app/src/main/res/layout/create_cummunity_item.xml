<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/c_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/png_blog"
                app:shapeAppearance="@style/RoundedCornerImage"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Indore Food Bloggers"
                android:textSize="9dp"
                android:maxLines="2"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/montserrat_semibold"
                app:layout_constraintTop_toBottomOf="@id/c_img"
                app:layout_constraintStart_toStartOf="@id/c_img"
                app:layout_constraintEnd_toEndOf="@id/c_img"/>

            <TextView
                android:id="@+id/members"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="70 Members"
                android:textSize="9dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_semibold"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="@id/c_img"
                app:layout_constraintEnd_toEndOf="@id/c_img"/>



            <TextView
                android:id="@+id/joinG"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="11dp"
                android:paddingVertical="5dp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

