<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/add_bg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/svg_add_bg"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/t"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Indore Food Bloggers"
                android:textSize="11dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/montserrat_semibold"
                app:layout_constraintTop_toBottomOf="@id/add_bg"
                app:layout_constraintStart_toStartOf="@id/add_bg"
                app:layout_constraintEnd_toEndOf="@id/add_bg"/>

            <TextView
                android:id="@+id/members"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="70 Members"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_semibold"
                app:layout_constraintTop_toBottomOf="@id/t"
                app:layout_constraintStart_toStartOf="@id/add_bg"
                app:layout_constraintEnd_toEndOf="@id/add_bg"/>



            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="CREATE"
                android:textSize="16dp"
                android:paddingVertical="5dp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintTop_toBottomOf="@id/members"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

