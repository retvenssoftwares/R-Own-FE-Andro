<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".NavigationFragments.jobforvendors.JobsDetailsVendor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
    android:id="@+id/jobs_back"
    android:layout_width="25dp"
    android:layout_height="25dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:src="@drawable/arrow_circle_left"
    android:layout_marginTop="25dp"
    android:layout_marginStart="15dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Jobs you posted"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textFontWeight="700"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="25dp"
        />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"
        android:background="#272A3D" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="Welcome,"
        android:textColor="#323F4B"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:text="Let’s find an employee"
        android:textColor="#323F4B"
        android:textSize="25dp"
        android:paddingLeft="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textFontWeight="700"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jobsDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:background="@color/white"
        android:layout_marginTop="15dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_recent_job"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/png_blog"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"
            app:shapeAppearance="@style/SquareCornerImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/detail_job_designation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Senior UI Designer"
            android:layout_marginHorizontal="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:textFontWeight="700"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_recent_job"
            app:layout_constraintStart_toEndOf="@id/profile_recent_job"/>

        <TextView
            android:id="@+id/detail_job_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Shahpura • Jakarta, Indonesia"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/grey_60"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_job_designation"
            app:layout_constraintStart_toEndOf="@id/profile_recent_job"/>


        <LinearLayout
            android:id="@+id/linear_layout_recent_jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="@id/profile_recent_job"
            app:layout_constraintTop_toBottomOf="@id/detail_job_location">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_layout">

                <TextView
                    android:id="@+id/details_jobs_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:text="Fulltime"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_layout">

                <TextView
                    android:id="@+id/details_jobs_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:text="Remote"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <TextView
            android:id="@+id/details_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingHorizontal="2dp"
            android:text="15K"
            android:textAlignment="center"
            android:textColor="@color/green_own"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/descriptionCard"
        android:background="#272A3D"
        android:layout_width="175dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobsDetail"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@+id/skillCard"
        app:cardCornerRadius="10dp"
        >
        <TextView
            android:id="@+id/textdes"
            android:textColor="@color/white"
            android:text="Description"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/skillCard"
        app:layout_constraintStart_toEndOf="@+id/descriptionCard"
        android:background="#F4F4F5"
        android:layout_width="175dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobsDetail"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        >
        <TextView
            android:id="@+id/textskill"
            android:textAlignment="center"
            android:textColor="#6B7280"
            android:text="Skills Required"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/descriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/skillCard"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="25dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Description"
            android:textColor="#111827"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textFontWeight="700"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/JobsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#4B5563"
            android:fontFamily="@font/montserrat_regular"
            android:text="Your role as the UI Designer is to use interactive components on various platforms (web, desktop and mobile). This will include producing high-fidelity mock-ups, iconography, UI illustrations/graphics, and other graphic eleme....See More."
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/skillView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/skillCard"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="25dp"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Skills"
            android:textColor="#111827"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textFontWeight="700"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/JobsSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#4B5563"
            android:fontFamily="@font/montserrat_regular"
            android:text="Your role as the UI Designer is to use interactive components on various platforms (web, desktop and mobile). This will include producing high-fidelity mock-ups, iconography, UI illustrations/graphics, and other graphic eleme....See More."
            />

    </RelativeLayout>


       <TextView
           android:id="@+id/applied"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:layout_constraintTop_toBottomOf="@id/descriptionView"
           android:layout_marginTop="30dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginHorizontal="20dp"
           android:text="Candidates who have applied"
           android:textColor="#1F2933"
           android:fontFamily="@font/montserrat_semibold"
           android:textFontWeight="700"
           android:textSize="18dp"
           />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/applied_candidate_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/applied"
            android:layout_marginTop="30dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>