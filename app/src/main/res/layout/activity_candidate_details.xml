<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"

    tools:context=".NavigationFragments.jobforvendors.CandidateDetailsActivity">

    <ImageView
        android:id="@+id/jobs_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/arrow_circle_left"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Candidate Details"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textFontWeight="700"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="25dp"
        />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"
        android:background="#272A3D" />


    <androidx.cardview.widget.CardView
        android:background="#F4F4F5"
        android:backgroundTint="#F4F4F5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="25dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:id="@+id/name_Candidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rahul Bhalerao"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="25dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textFontWeight="700"
                />

            <TextView
                android:id="@+id/userName_Candidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_rahul_bhalerao_"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/name_Candidate"
                android:fontFamily="@font/montserrat_regular"
                android:textFontWeight="700"
                />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/candidate_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dummy"
                android:layout_below="@+id/userName_Candidate"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/candidate_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName_Candidate"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:text="Android Developer"
                android:textColor="#323232"
                android:fontFamily="@font/montserrat_semibold"
                android:textFontWeight="700"
                android:layout_marginEnd="15dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:layout_toEndOf="@+id/candidate_profile" />

            <View
                android:id="@+id/view2"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_below="@id/candidate_role"
                android:layout_toEndOf="@+id/candidate_profile"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:background="@color/grey" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/view2"
                android:layout_marginStart="21dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/candidate_profile"
                android:src="@drawable/locationvector" />

            <TextView
                android:id="@+id/location_candidate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/candidate_profile"
                android:text="Mumbai"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/view2"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="91dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="156dp"
                android:layout_toEndOf="@+id/candidate_profile"
                android:src="@drawable/macbook_pro" />

            <TextView
                android:id="@+id/candidate_jobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginStart="110dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/candidate_profile"
                android:text="FullTime"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/view2"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="161dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="89dp"
                android:layout_toEndOf="@+id/candidate_profile"
                android:src="@drawable/clockvector" />

            <TextView
                android:id="@+id/candidate_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginStart="180dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/candidate_profile"
                android:text="4 Year"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <View
                android:id="@+id/view3"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_below="@id/candidate_profile"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="50dp"
                android:background="#272A3D" />

            <TextView
                android:id="@+id/candidate_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view3"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="
UI/UX designer with 5+ years of experience
creating user-centered designs for web and
 mobile applications. Passionate about creating
intuitive and visually appealing interfaces that
enhance user experience."
                android:textSize="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>