<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Dashboard.createPosts.CreatePost">


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/createCommunity_backBtn"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:src="@drawable/community_btn" />

        <androidx.cardview.widget.CardView
            android:id="@+id/next_cumm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                android:paddingHorizontal="14dp"
                android:textAlignment="center"
                android:text="Share"
                android:fontFamily="@font/montserrat_bold"
                android:textFontWeight="600"
                android:textSize="14dp"
                android:background="@color/green_own"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative"
        android:background="@color/grey_20" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_complete_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:shapeAppearance="@style/RoundedCornerImage"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/relative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_complete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/user_complete_profile"
        app:layout_constraintStart_toEndOf="@id/user_complete_profile"
        app:layout_constraintTop_toTopOf="@id/user_complete_profile"
        app:layout_constraintVertical_bias="0.03" />

    <LinearLayout
        android:id="@+id/can_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="7dp"
        app:layout_constraintTop_toBottomOf="@id/user_complete_name"
        app:layout_constraintStart_toEndOf="@id/user_complete_profile">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_eye"
            android:paddingEnd="3dp"
            app:tint="@color/black"/>
        <TextView
            android:id="@+id/canSeeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can See"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingVertical="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textFontWeight="600"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_down_24"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/can_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_marginStart="6dp"
        android:paddingHorizontal="7dp"
        app:layout_constraintTop_toBottomOf="@id/user_complete_name"
        app:layout_constraintStart_toEndOf="@id/can_see">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"
            android:paddingEnd="3dp"
            app:tint="@color/black"/>
        <TextView
            android:id="@+id/can_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can comment"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingVertical="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textFontWeight="600"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_down_24"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/createP"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/select_img"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/can_see"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/whatDY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="What do you want to share today ?"
        app:boxStrokeColor="@color/black"
        android:layout_marginHorizontal="20dp"
        app:boxStrokeWidthFocused="2dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/black"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColorHint="@color/grey_40"
        app:layout_constraintStart_toStartOf="@id/user_complete_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_complete_profile">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/whatDYEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/postsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whatDY">

        <ImageView
            android:id="@+id/img_preview"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/png_cover"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_4"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_5"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"/>


        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/delete_post"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/delete_svg"
        android:elevation="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        app:tint="@color/black"
        app:layout_constraintEnd_toEndOf="@id/postsLayout"
        app:layout_constraintTop_toTopOf="@id/postsLayout"/>

    <LinearLayout
        android:id="@+id/updateEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whatDY">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_location_post_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Location"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:endIconDrawable="@drawable/png_location"
            app:endIconMode="custom"
            app:endIconTint="@color/black"
            android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_location_post_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="false"
                android:text="Select Your Location"
                android:editable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_post_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="What event are you going to ?"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_event_venue_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="false"
                android:text="Select event"
                android:editable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/next_updateEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="6dp"
                android:paddingHorizontal="17dp"
                android:textAlignment="center"
                android:text="Next"
                android:fontFamily="@font/montserrat_bold"
                android:textFontWeight="600"
                android:textSize="18dp"
                android:background="@color/green_own"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/checkIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_marginHorizontal="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whatDY">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Where are you checking-in ?"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="18dp"
            android:layout_marginTop="25dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_location_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Location"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:endIconDrawable="@drawable/png_location"
            app:endIconMode="custom"
            app:endIconTint="@color/black"
            android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_location_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="false"
                android:text="Select Your Location"
                android:editable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/venue_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Venue"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:endIconDrawable="@drawable/png_location"
            app:endIconMode="custom"
            app:endIconTint="@color/black"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_venue_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="false"
                android:text="Select venue"
                android:editable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/next_checkIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="6dp"
                android:paddingHorizontal="17dp"
                android:textAlignment="center"
                android:text="Next"
                android:fontFamily="@font/montserrat_bold"
                android:textFontWeight="600"
                android:textSize="18dp"
                android:background="@color/green_own"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_venue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginStart="22dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whatDY"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/hotel_venue_cover"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:elevation="8dp"
                app:shapeAppearanceOverlay="@style/SquareCornerImage"
                android:src="@drawable/png_blog"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintStart_toStartOf="@id/hotel_venue_cover"
                app:layout_constraintEnd_toEndOf="@id/hotel_venue_cover"
                app:layout_constraintBottom_toBottomOf="@id/hotel_venue_cover">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/venue_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Paradise Inn"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="12dp"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="5"
                        android:stepSize="3"
                        android:numStars="5"
                        android:layout_marginStart="5dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_event_post"
        android:layout_width="260dp"
        android:layout_height="300dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        android:visibility="gone"
        app:cardElevation="6dp"
        android:layout_margin="6dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whatDY"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cover_event"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:elevation="8dp"
                android:layout_margin="8dp"
                app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"
                android:src="@drawable/png_blog"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/title_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:text="Radiohead Concert"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/cover_event"
                app:layout_constraintTop_toBottomOf="@id/cover_event"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_event"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:shapeAppearanceOverlay="@style/RoundedCornerImage"
                android:layout_marginTop="5dp"
                android:src="@drawable/svg_add_bg"
                app:layout_constraintTop_toBottomOf="@id/title_event"
                app:layout_constraintStart_toStartOf="@id/title_event"/>

            <TextView
                android:id="@+id/event_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adventures Paul"
                android:textSize="12dp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/profile_event"
                app:layout_constraintBottom_toBottomOf="@id/profile_event"
                app:layout_constraintTop_toTopOf="@id/profile_event"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/event_concert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="8dp"
                    android:textAlignment="center"
                    android:text="Concert"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="12dp"
                    android:background="@color/black"
                    android:textColor="@color/green_own"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="14dp"
                android:text="22 Oct, 2022"
                android:textSize="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/grey_40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>