<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".NavigationFragments.profile.EditVendorInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profile_backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/community_btn"
                app:tint="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Vendor Profile"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="18dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profile_backBtn"
                app:layout_constraintBottom_toBottomOf="@id/profile_backBtn"
                app:layout_constraintStart_toEndOf="@id/profile_backBtn"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relative"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tell People How Your Brands Lookâ€™s Like"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/brandLogo"
            app:layout_constraintBottom_toBottomOf="@id/brandLogo"
            app:layout_constraintStart_toEndOf="@id/brandLogo"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/brandLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/svg_vendor"
            app:shapeAppearance="@style/RoundedCornerImage"
            android:scaleType="centerCrop"
            android:layout_marginStart="22dp"
            android:padding="3dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relative"/>
        <ImageView
            android:id="@+id/cameraEdit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/camera"
            app:layout_constraintBottom_toBottomOf="@id/brandLogo"
            app:layout_constraintEnd_toEndOf="@id/brandLogo"/>


        <View
            android:id="@+id/view2"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:background="@color/green_own"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/text_h2"
            app:layout_constraintBottom_toBottomOf="@id/text_h2"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/text_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Edit Vendor Description"
            android:textColor="@color/green_own"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toBottomOf="@id/brandLogo"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/green_own"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/text_h2"
            app:layout_constraintBottom_toBottomOf="@id/text_h2"
            app:layout_constraintStart_toEndOf="@id/text_h2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/descriptionTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_marginHorizontal="30dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_h2">
            <EditText
                android:id="@+id/descriptionoEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vendor Description"
                android:textColorHint="@color/grey_40"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Body1"
                android:background="@null"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/syjh"/>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view3"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:background="@color/green_own"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/text_h3"
            app:layout_constraintBottom_toBottomOf="@id/text_h3"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/text_h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Edit your website"
            android:textColor="@color/green_own"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/view3"
            app:layout_constraintTop_toBottomOf="@id/descriptionTIL"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/green_own"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/text_h3"
            app:layout_constraintBottom_toBottomOf="@id/text_h3"
            app:layout_constraintStart_toEndOf="@id/text_h3"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/webC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_marginHorizontal="30dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_h3">
            <EditText
                android:id="@+id/websiteLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit your website"
                android:textColorHint="@color/grey_40"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Body1"
                android:background="@null"
                android:padding="12dp"
                android:singleLine="true"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/syjh"/>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view4"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:background="@color/green_own"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/text_h4"
            app:layout_constraintBottom_toBottomOf="@id/text_h4"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/text_h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Add your work"
            android:textColor="@color/green_own"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/view4"
            app:layout_constraintTop_toBottomOf="@id/webC"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/green_own"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/text_h4"
            app:layout_constraintBottom_toBottomOf="@id/text_h4"
            app:layout_constraintStart_toEndOf="@id/text_h4"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/text_h4"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/delete_img1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/svg_cross"
                android:visibility="gone"
                android:elevation="5dp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-15dp"
                app:layout_constraintEnd_toEndOf="@id/img_1"
                app:layout_constraintBottom_toTopOf="@id/img_1"/>
            <ImageView
                android:id="@+id/img_1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/delete_img2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/svg_cross"
                android:visibility="gone"
                android:elevation="5dp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-15dp"
                app:layout_constraintEnd_toEndOf="@id/img_2"
                app:layout_constraintBottom_toTopOf="@id/img_2"/>
            <ImageView
                android:id="@+id/img_2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@id/img_1"
                app:layout_constraintTop_toTopOf="@id/img_1"
                app:layout_constraintBottom_toBottomOf="@id/img_1"/>


            <ImageView
                android:id="@+id/delete_img3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/svg_cross"
                android:visibility="gone"
                android:elevation="5dp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-15dp"
                app:layout_constraintEnd_toEndOf="@id/img_3"
                app:layout_constraintBottom_toTopOf="@id/img_3"/>
            <ImageView
                android:id="@+id/img_3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@id/img_2"
                app:layout_constraintTop_toTopOf="@id/img_2"
                app:layout_constraintBottom_toBottomOf="@id/img_1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginHorizontal="40dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/li"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="14dp"
                android:paddingHorizontal="8dp"
                android:background="@color/suggested_job_yellow"
                android:text="Save"/>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>