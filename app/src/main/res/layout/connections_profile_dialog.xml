<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/connection_profile"
        android:layout_width="235dp"
        android:layout_height="235dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:src="@drawable/svg_person_account"
        android:padding="1dp"
        android:elevation="6dp"
        android:background="@color/white"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/verification"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:visibility="gone"
        android:elevation="8dp"
        android:src="@drawable/svg_verificationstatus"
        app:layout_constraintTop_toTopOf="@id/connection_profile"
        app:layout_constraintEnd_toEndOf="@id/connection_profile"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_round"
        android:layout_marginTop="200dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile"
            android:layout_width="235dp"
            android:layout_height="235dp"
            android:scaleType="centerCrop"
            android:src="@color/white"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            android:padding="1dp"
            android:layout_marginBottom="-100dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/c_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:text="Lata Mamnani"
        android:textColor="#000000"
        android:textSize="22dp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintStart_toStartOf="@id/profile"
        app:layout_constraintEnd_toEndOf="@id/profile"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:text="Retvens' Director"
        android:textColor="#000000"
        android:textSize="18dp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toBottomOf="@id/c_name"
        app:layout_constraintStart_toStartOf="@id/profile"
        app:layout_constraintEnd_toEndOf="@id/profile"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="50dp"
        android:text=" Optimizing revenue, one room at a time. Follow along for tips on how to do that in the best but totally non-conventional manner. "
        android:textColor="#000000"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/profile"
        app:layout_constraintEnd_toEndOf="@id/profile"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_connect_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:cardElevation="8dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"
            android:textAlignment="center"
            android:text="Connect"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="22dp"
            android:background="@color/green_own"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_message_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="8dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/card_connect_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"
            android:textAlignment="center"
            android:text="Message"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18dp"
            android:background="@color/black"
            android:textColor="@color/green_own"/>

    </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>