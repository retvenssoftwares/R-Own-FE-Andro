<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".viewAll.viewAllCommunities.OpenCommunityDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="#272A3D"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/community_detail_backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/community_btn"
                app:tint="@color/green_own"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/llll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relative">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/community_profile"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedCornerImage"
                tools:src="@drawable/png_cover"/>

            <TextView
                android:id="@+id/community_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retvens Directors"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/community_detail_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 members"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="16dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/join_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="@color/green_own">

                <TextView
                    android:id="@+id/switchToCommunity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/green_own"
                    android:textSize="16dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp"
                    android:background="@color/black"
                    android:text="Join"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Description"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/llll"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/community_Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="38dp"
            android:layout_marginHorizontal="18dp"
            app:layout_constraintTop_toBottomOf="@id/llll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/community_created_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by Prashant Mishra | 06/04/2023"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/community_Description"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/lll6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/community_created_by"
            android:layout_marginTop="20dp"
            android:text="We are here"
            android:visibility="gone"
            android:textColor="#5A5858"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            />

        <FrameLayout
            android:id="@+id/map_show"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            tools:ignore="MissingConstraints"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/lll6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            />


        <LinearLayout
            android:id="@+id/lll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:background="@color/grey_10"
            app:layout_constraintTop_toBottomOf="@id/map_show"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="@color/green_own">

                <TextView
                    android:id="@+id/users_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="12dp"
                    android:background="@color/white"
                    android:text="Users"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="@color/green_own">

                <TextView
                    android:id="@+id/mediaText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="12dp"
                    android:background="@color/grey_10"
                    android:text="Media"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/community_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lll2"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>