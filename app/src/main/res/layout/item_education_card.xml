<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="3dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/editEducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/black_border"
                app:layout_constraintTop_toTopOf="@id/cardCollegeName"
                app:layout_constraintBottom_toBottomOf="@id/cardCollegeName"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    app:tint="@color/black"
                    android:src="@drawable/svg_edit_pen"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3dp"
                    android:paddingStart="5dp"
                    android:textAlignment="center"
                    android:text="Edit"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="10dp"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/circle2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                app:tint = "@color/green_own"
                android:src="@drawable/circle_gray_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCollegeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:cardBackgroundColor="@color/green_own"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintBottom_toBottomOf="@id/circle2"
                app:layout_constraintTop_toTopOf="@id/circle2"
                app:layout_constraintStart_toEndOf="@id/circle2">

                <TextView
                    android:id="@+id/collageName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="College Name"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="12dp"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/cardCollegeName"
                app:layout_constraintStart_toStartOf="@id/cardCollegeName">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Years:"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintTop_toTopOf="@id/edit"
                    app:layout_constraintBottom_toBottomOf="@id/edit"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022 - 2024"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="@id/edit"
                    app:layout_constraintBottom_toBottomOf="@id/edit"
                    app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>