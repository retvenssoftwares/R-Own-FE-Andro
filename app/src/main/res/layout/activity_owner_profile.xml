<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".NavigationFragments.profile.profileForViewers.OwnerProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profile_backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/community_btn"
                app:tint="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/profile_setting"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="16dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/profile_backBtn"
                app:layout_constraintBottom_toBottomOf="@id/profile_backBtn"
                app:layout_constraintStart_toEndOf="@id/profile_backBtn"/>

            <ImageView
                android:id="@+id/profile_setting"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/setting"
                android:rotation="90"
                app:tint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            android:src="@drawable/svg_person_account"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/relative"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/verification"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone"
            android:src="@drawable/svg_verificationstatus"
            app:layout_constraintTop_toTopOf="@id/profile"
            app:layout_constraintEnd_toEndOf="@id/profile"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/profile"
            app:layout_constraintStart_toStartOf="@id/profile"/>

        <TextView
            android:id="@+id/profile_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Chain // Hotel"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/profile_name"
            app:layout_constraintStart_toStartOf="@id/profile_name"/>

        <TextView
            android:id="@+id/posts_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/posts"
            app:layout_constraintBottom_toTopOf="@id/posts"
            app:layout_constraintStart_toStartOf="@id/posts"/>

        <TextView
            android:id="@+id/posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14dp"
            android:layout_marginStart="48dp"
            android:textColor="@color/black"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintEnd_toStartOf="@id/connections"
            app:layout_constraintTop_toTopOf="@id/profile"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            app:layout_constraintStart_toEndOf="@id/profile"/>

        <TextView
            android:id="@+id/connections_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/connections"
            app:layout_constraintBottom_toTopOf="@id/connections"
            app:layout_constraintStart_toStartOf="@id/connections"/>

        <TextView
            android:id="@+id/connections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connections"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/posts"
            app:layout_constraintBottom_toBottomOf="@id/posts"
            app:layout_constraintStart_toEndOf="@id/posts"/>

        <TextView
            android:id="@+id/bio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Are you ready to begin your hospitality adventures with us ?"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="13dp"
            android:layout_marginTop="12dp"
            android:textFontWeight="600"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/connections"
            app:layout_constraintTop_toBottomOf="@id/profile_about"
            app:layout_constraintStart_toStartOf="@id/profile"/>

        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check us out:"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="13dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/bio"
            app:layout_constraintStart_toStartOf="@id/profile"/>

        <TextView
            android:id="@+id/linkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.example.com"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="13dp"
            android:layout_marginStart="6dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/link"
            app:layout_constraintTop_toTopOf="@id/link"
            app:layout_constraintStart_toEndOf="@id/link"/>

        <LinearLayout
            android:id="@+id/layout_rh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/link"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_weight="2"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/connStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/green_own"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAlignment="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/black"
                    android:text="CONNECT"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/openReview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginVertical="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/border"
                    android:text="SHARE PROFILE"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/lll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_rh"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:paddingVertical="5dp"
                android:background="@color/grey_3">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginVertical="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/green_own">

                    <TextView
                        android:id="@+id/jobs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textAlignment="center"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="20dp"
                        android:background="@color/white"
                        android:text="Jobs"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardBackgroundColor="@color/green_own">

                    <TextView
                        android:id="@+id/media"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textAlignment="center"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="20dp"
                        android:background="@color/white"
                        android:text="Media"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardBackgroundColor="@color/green_own">

                    <TextView
                        android:id="@+id/polls"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textAlignment="center"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="20dp"
                        android:background="@color/grey_5"
                        android:text="Polls"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardBackgroundColor="@color/green_own">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textAlignment="center"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="17dp"
                        android:background="@color/grey_5"
                        android:text="Status"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardBackgroundColor="@color/green_own">

                    <TextView
                        android:id="@+id/hotels"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textAlignment="center"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="15dp"
                        android:background="@color/grey_5"
                        android:text="Hotels"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="3dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/green_own">

                    <TextView
                        android:id="@+id/events"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textAlignment="center"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="15dp"
                        android:background="@color/grey_5"
                        android:text="Events"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <FrameLayout
            android:id="@+id/child_profile_fragments_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/lll2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>