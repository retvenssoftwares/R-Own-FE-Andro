<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".sideNavigation.ChatWithUsActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative_n"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/robo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/png_chat_with_us"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Stephanie"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textFontWeight="700"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="12dp"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@id/cwu_backBtn"
            app:layout_constraintEnd_toStartOf="@id/robo"
            app:layout_constraintBottom_toBottomOf="@id/cwu_backBtn"
            app:layout_constraintTop_toTopOf="@id/cwu_backBtn"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="I usually reply in minutes"
            android:textColor="@color/grey_40"
            android:textAlignment="center"
            android:textFontWeight="700"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="12dp"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@id/cwu_backBtn"
            app:layout_constraintEnd_toStartOf="@id/robo"
            app:layout_constraintTop_toBottomOf="@id/tt"/>

        <ImageButton
            android:id="@+id/cwu_backBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:src="@drawable/community_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/typeboxsetup"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="13dp"
                app:srcCompat="@drawable/emojisymbol" />

            <EditText
                android:id="@+id/text_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16dp"
                android:background="@android:color/transparent"
                android:hint="Type a Message"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:imeOptions="actionSearch" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:paddingVertical="14dp"
                app:srcCompat="@drawable/attach" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:paddingVertical="14dp"
                app:srcCompat="@drawable/camera_svg" />

            <ImageView
                android:id="@+id/btn_send"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:paddingVertical="12dp"
                app:srcCompat="@drawable/sendtext" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>