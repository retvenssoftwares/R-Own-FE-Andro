<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".NavigationFragments.job.jobDetailsFrags.ActivitiesFragment">

    <!--____________________________________________ Activities Section_________________________________________-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/employee_profile_explore"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/profile"
            app:shapeAppearance="@style/RoundedCornerImage"
            android:scaleType="centerCrop"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/employee_name_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Name"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="14dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintEnd_toStartOf="@id/card_view_profile"
            app:layout_constraintBottom_toBottomOf="@id/employee_profile_explore"
            app:layout_constraintStart_toEndOf="@id/employee_profile_explore"
            app:layout_constraintTop_toTopOf="@id/employee_profile_explore"/>

        <TextView
            android:id="@+id/employee_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CEO"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/grey_40"
            android:textAlignment="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@id/employee_experience"
            app:layout_constraintTop_toBottomOf="@id/employee_name_explore"
            app:layout_constraintStart_toStartOf="@id/employee_name_explore"/>

        <TextView
            android:id="@+id/employee_experience"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=", Retvence Services"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/grey_40"
            android:textAlignment="textStart"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/card_view_profile"
            app:layout_constraintTop_toBottomOf="@id/employee_name_explore"
            app:layout_constraintStart_toEndOf="@id/employee_role"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="6dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/employee_profile_explore"
            app:layout_constraintBottom_toBottomOf="@id/employee_profile_explore">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="View profile"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="16dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@color/suggested_job_yellow"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_60"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_60"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="35dp"
            app:layout_constraintTop_toBottomOf="@id/card_view_profile"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>