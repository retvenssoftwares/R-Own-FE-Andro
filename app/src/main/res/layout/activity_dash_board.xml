                   android:layout_marginHorizontal="8dp"
                   app:cardCornerRadius="12dp"
                   app:cardBackgroundColor="@color/white"
                   app:cardElevation="6dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
