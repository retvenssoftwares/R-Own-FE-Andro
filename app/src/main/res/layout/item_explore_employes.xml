<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/employee_profile_explore"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/png_post"
        app:shapeAppearance="@style/RoundedCornerImage"
        android:scaleType="centerCrop"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/employee_name_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Name"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@id/employee_profile_explore"
        app:layout_constraintTop_toTopOf="@id/employee_profile_explore"/>

    <TextView
        android:id="@+id/employee_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Stack Developer ."
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/grey_40"
        android:textAlignment="center"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/employee_name_explore"
        app:layout_constraintStart_toStartOf="@id/employee_name_explore"/>

    <TextView
        android:id="@+id/employee_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 4Yr"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/grey_40"
        android:textAlignment="center"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/employee_name_explore"
        app:layout_constraintStart_toEndOf="@id/employee_role"/>

    <TextView
        android:id="@+id/employee_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Indore"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/grey_40"
        android:textAlignment="center"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/employee_role"
        app:layout_constraintStart_toStartOf="@id/employee_role"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/view_candidateDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="6dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/employee_profile_explore"
        app:layout_constraintBottom_toBottomOf="@id/employee_profile_explore">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="View"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="12dp"
            android:paddingVertical="7dp"
            android:paddingHorizontal="14dp"
            android:background="@color/suggested_job_yellow"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>