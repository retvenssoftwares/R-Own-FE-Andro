<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/r_own_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.83"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R OWN"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="25dp"
            android:textColor="#D3000000"
            app:layout_constraintHorizontal_bias="0.35"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="16dp"
            android:textColor="#9E000000"
            android:layout_marginHorizontal="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RETVENS"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="24dp"
            android:textColor="@color/green_own"
            android:textStyle="bold"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="R OWN"
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="250dp"
        android:textFontWeight="500"
        />

    <TextView
        android:id="@+id/appVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R OWN"
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="17dp"
        android:layout_marginBottom="50dp"
        android:textFontWeight="500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/updateYourApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please update your application"
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="17dp"
        android:visibility="gone"
        android:layout_marginHorizontal="5dp"
        android:textFontWeight="500"
        app:layout_constraintTop_toBottomOf="@id/appVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>