<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".NavigationFragments.profile.vendorsReview.ReviewsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Reviews"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/reviews_backBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:src="@drawable/community_btn" />

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relative"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relative"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/im"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/svg_star"
                    android:layout_marginStart="12dp"
                    app:layout_constraintVertical_bias="0.3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/rt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate 3.0"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintTop_toTopOf="@id/im"
                    app:layout_constraintStart_toEndOf="@id/im"/>

                <TextView
                    android:id="@+id/renre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2K review and ratings"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="3dp"
                    android:layout_marginHorizontal="12dp"
                    app:layout_constraintTop_toBottomOf="@id/rt"
                    app:layout_constraintStart_toEndOf="@id/im"/>

                <View
                    android:id="@+id/devider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_20"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/im"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/trip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Trip Advisor Rating"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="12dp"
                    app:layout_constraintEnd_toStartOf="@id/lls"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/devider"
                    app:layout_constraintStart_toStartOf="@id/im"/>

                <LinearLayout
                    android:id="@+id/lls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/trip"
                    app:layout_constraintBottom_toBottomOf="@id/trip">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="6dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="4.3"
                            android:paddingHorizontal="5dp"
                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:drawablePadding="2dp"
                            android:drawableTint="@color/suggested_job_yellow"
                            app:drawableStartCompat="@drawable/ic_star_black_18dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="6dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="4.3"
                            android:paddingHorizontal="5dp"
                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:drawablePadding="2dp"
                            android:drawableTint="@color/suggested_job_yellow"
                            app:drawableStartCompat="@drawable/ic_star_black_18dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="6dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="4.3"
                            android:paddingHorizontal="5dp"
                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:drawablePadding="2dp"
                            android:drawableTint="@color/suggested_job_yellow"
                            app:drawableStartCompat="@drawable/ic_star_black_18dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="6dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="4.3"
                            android:paddingHorizontal="5dp"
                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:drawablePadding="2dp"
                            android:drawableTint="@color/suggested_job_yellow"
                            app:drawableStartCompat="@drawable/ic_star_black_18dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/llh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/card_rate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="6dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/svg_star"
                        android:layout_margin="8dp"
                        app:layout_constraintVertical_bias="0.3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Great Behavior"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="@id/img"
                        app:layout_constraintStart_toEndOf="@id/img"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.5K review and ratings"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="3dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="6dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/svg_timer_y"
                        android:background="@drawable/roundedbutton"
                        android:backgroundTint="#ADD134"
                        android:layout_margin="8dp"
                        android:padding="12dp"
                        app:layout_constraintVertical_bias="0.3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attentive staff"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="@id/img"
                        app:layout_constraintStart_toEndOf="@id/img"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.5K review and ratings"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="3dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="6dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/svg_worth_money"
                        android:layout_margin="8dp"
                        app:layout_constraintVertical_bias="0.3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Worth the money"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="@id/img"
                        app:layout_constraintStart_toEndOf="@id/img"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.5K review and ratings"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="3dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/what_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What People Say"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/llh"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/what_people_recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            tools:listitem="@layout/item_what_people_say"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/what_p"/>

        <TextView
            android:id="@+id/allR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Reviews"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/what_people_recycler"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allReviewRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginHorizontal="8dp"
            tools:listitem="@layout/item_all_reviews"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/allR"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>