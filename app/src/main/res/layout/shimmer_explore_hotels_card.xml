<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_venue"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/hotel_venue_cover"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:scaleType="centerCrop"
                android:elevation="8dp"
                app:strokeColor="@color/grey"
                app:strokeWidth="1dp"
                android:outlineSpotShadowColor="@color/grey"
                app:shapeAppearanceOverlay="@style/SquareCornerImage"
                android:background="@color/grey_20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/grey_40"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintStart_toStartOf="@id/hotel_venue_cover"
                app:layout_constraintEnd_toEndOf="@id/hotel_venue_cover"
                app:layout_constraintBottom_toBottomOf="@id/hotel_venue_cover">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/igl"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/svg_navigation_location"
                        app:tint="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/location_hotel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Location"
                        android:textColor="@color/grey_20"
                        android:background="@color/grey_20"
                        android:textSize="8dp"
                        android:layout_marginStart="3dp"
                        app:layout_constraintEnd_toStartOf="@id/card_like"
                        app:layout_constraintTop_toTopOf="@id/igl"
                        app:layout_constraintBottom_toBottomOf="@id/igl"
                        app:layout_constraintStart_toEndOf="@id/igl"/>

                    <ImageView
                        android:id="@+id/card_like"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/svg_heart"
                        android:elevation="10dp"
                        android:layout_margin="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/igl"/>


                    <TextView
                        android:id="@+id/venue_name"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_margin="5dp"
                        android:textColor="@color/grey_20"
                        android:background="@color/grey_20"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Paradise Inn"
                        android:maxLines="2"
                        android:textFontWeight="600"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toStartOf="@id/card_like"
                        app:layout_constraintTop_toBottomOf="@id/location_hotel"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/hotelStar"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_margin="5dp"
                        android:textColor="@color/grey_20"
                        android:background="@color/grey_20"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="3 Star Hotel"
                        android:maxLines="2"
                        android:textFontWeight="600"
                        android:textSize="8dp"
                        app:layout_constraintEnd_toStartOf="@id/card_like"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/venue_name"
                        app:layout_constraintStart_toStartOf="parent"/>

<!--
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="5"
                        android:stepSize="3"
                        android:numStars="5"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/venue_name"
                        app:layout_constraintStart_toStartOf="parent"/>
-->

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>