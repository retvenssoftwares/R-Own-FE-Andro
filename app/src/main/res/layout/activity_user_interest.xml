<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".authentication.UserInterest">

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:contentDescription="changeLanguage"
        android:src="@drawable/background_interest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, How are you "
        android:textAlignment="center"
        android:textSize="26dp"
        android:paddingHorizontal="12dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_tell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us what interests you ?"
        android:textSize="15dp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingHorizontal="13dp"
        app:layout_constraintStart_toStartOf="@id/user_name"
        app:layout_constraintTop_toBottomOf="@id/user_name"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="@id/img_top"
        app:layout_constraintEnd_toEndOf="@id/img_top"
        app:layout_constraintTop_toBottomOf="@id/text_tell">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp"
                app:cardElevation="12dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="11dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:id="@+id/et_search_interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:hint="What are you into ?"
                    android:textColorHint="@color/grey_40"
                    android:textColor="@color/grey_60"
                    android:textSize="14dp"
                    android:background="@null"
                    android:drawableEnd="@drawable/svg_search"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:fontFamily="@font/montserrat_regular"/>

            </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/interest_grid"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="20dp"
                    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/interest_grid_item"
                    android:horizontalSpacing="4dp"
                    android:verticalSpacing="5dp"
                    app:layout_constraintVertical_bias="0.03"
                    app:layout_constraintTop_toBottomOf="@id/card_search"
                    app:layout_constraintBottom_toTopOf="@id/card_continue_interest"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
            android:id="@+id/card_continue_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/text_continue_interest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:text="@string/continu"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"
                android:background="@color/green_own"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>