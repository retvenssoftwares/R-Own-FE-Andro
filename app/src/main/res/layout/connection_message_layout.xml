<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/top_round"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/message_profile"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:src="@drawable/png_vendor"
        android:padding="1dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/message_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:text="Lata Mamnani"
        android:textColor="#000000"
        android:textSize="22dp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toBottomOf="@id/message_profile"
        app:layout_constraintStart_toStartOf="@id/message_profile"
        app:layout_constraintEnd_toEndOf="@id/message_profile"
        />

    <TextView
        android:id="@+id/message_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:text="Retvens' Director"
        android:textColor="#000000"
        android:textSize="18dp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toBottomOf="@id/message_name"
        app:layout_constraintStart_toStartOf="@id/message_profile"
        app:layout_constraintEnd_toEndOf="@id/message_profile"
        />

    <TextView
        android:id="@+id/message_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="50dp"
        android:text=" Optimizing revenue, one room at a time. Follow along for tips on how to do that in the best but totally non-conventional manner. "
        android:textColor="#000000"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/message_title"
        app:layout_constraintStart_toStartOf="@id/message_profile"
        app:layout_constraintEnd_toEndOf="@id/message_profile"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:cardElevation="8dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/text_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.cardview.widget.CardView>
    <EditText
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="type in your text"
        android:textColorHint="@color/grey_60"
        android:gravity="top"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/round_corner_background"
        android:backgroundTint="@color/grey_5"
        app:layout_constraintTop_toBottomOf="@id/message_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="8dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="6dp"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintTop_toBottomOf="@id/text_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"
            android:textAlignment="center"
            android:text="Message"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="15dp"
            android:background="@color/green_own"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>