<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".NavigationFragments.profile.hotels.EditHotelDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profile_backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/community_btn"
                app:tint="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Paradise Inn Details"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="18dp"
                android:layout_marginHorizontal="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profile_backBtn"
                app:layout_constraintBottom_toBottomOf="@id/profile_backBtn"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relative"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp"
            android:layout_marginHorizontal="30dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@id/text_h"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <EditText
                android:id="@+id/et_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Hotel Name"
                android:textColorHint="@color/grey_40"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Body1"
                android:background="@null"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/syjh"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bioTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp"
            android:layout_marginHorizontal="30dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_h2">
            <EditText
                android:id="@+id/overviewEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Overview"
                android:textColorHint="@color/grey_40"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Body1"
                android:background="@null"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/syjh"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/hotelLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp"
            android:layout_marginHorizontal="30dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_h2">
            <TextView
                android:id="@+id/locationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel Location"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Body1"
                android:background="@null"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/syjh"/>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp">


            <ImageView
                android:id="@+id/delete_img1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/svg_cross"
                android:visibility="gone"
                android:elevation="5dp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-15dp"
                app:layout_constraintEnd_toEndOf="@id/img_1"
                app:layout_constraintBottom_toTopOf="@id/img_1"/>
            <ImageView
                android:id="@+id/img_1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/delete_img2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/svg_cross"
                android:visibility="gone"
                android:elevation="5dp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-15dp"
                app:layout_constraintEnd_toEndOf="@id/img_2"
                app:layout_constraintBottom_toTopOf="@id/img_2"/>
            <ImageView
                android:id="@+id/img_2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@id/img_1"
                app:layout_constraintTop_toTopOf="@id/img_1"
                app:layout_constraintBottom_toBottomOf="@id/img_1"/>


            <ImageView
                android:id="@+id/delete_img3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/svg_cross"
                android:visibility="gone"
                android:elevation="5dp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="-15dp"
                app:layout_constraintEnd_toEndOf="@id/img_3"
                app:layout_constraintBottom_toTopOf="@id/img_3"/>
            <ImageView
                android:id="@+id/img_3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/gallery_svg"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@id/img_2"
                app:layout_constraintTop_toTopOf="@id/img_2"
                app:layout_constraintBottom_toBottomOf="@id/img_1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/updateHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="45dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="14dp"
                android:paddingHorizontal="8dp"
                android:background="@color/suggested_job_yellow"
                android:text="Next"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>