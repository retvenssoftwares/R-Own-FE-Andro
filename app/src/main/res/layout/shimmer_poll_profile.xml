<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/poll_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="12dp"
                android:text="2 WEEKS AGO"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/grey_20"
                android:background="@color/grey_20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/title_poll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="18dp"
                android:text="When Travelling, what do"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/grey_20"
                android:background="@color/grey_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/poll_time"
                app:layout_constraintTop_toBottomOf="@id/poll_time"/>

            <LinearLayout
                android:id="@+id/ll_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/title_poll"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="10dp"
                app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/svg_rectangle_background"
                android:backgroundTint="@color/grey_40"
                app:layout_constraintTop_toBottomOf="@id/title_poll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_20"
                    android:background="@color/grey_20"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingHorizontal="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="12dp"
                    android:text="Hostels"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@color/grey_20"
                    android:layout_marginStart="2dp"
                    app:layout_constraintTop_toTopOf="@id/option1"
                    app:layout_constraintBottom_toBottomOf="@id/option1"
                    app:layout_constraintStart_toEndOf="@id/option1"/>

                <TextView
                    android:id="@+id/Option1_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:text="12 Votes"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey_20"
                    android:background="@color/grey_20"
                    app:layout_constraintTop_toTopOf="@id/option1"
                    app:layout_constraintBottom_toBottomOf="@id/option1"
                    app:layout_constraintStart_toEndOf="@id/option1"/>

                <TextView
                    android:id="@+id/option1_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="12dp"
                    android:textColor="@color/grey_20"
                    android:background="@color/grey_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

                <com.mackhartley.roundedprogressbar.RoundedProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:rpbBackgroundColor="@color/grey_20"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="25dp"
                    app:rpbCornerRadius="20dp"
                    app:rpbProgressColor="@color/green_own"
                    app:rpbShowProgressText="false"
                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/svg_rectangle_background"
                android:backgroundTint="@color/grey_40"
                app:layout_constraintTop_toBottomOf="@id/title_poll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_20"
                    android:background="@color/grey_20"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginStart="12dp"
                    android:text="Luxury Stays"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@color/grey_20"
                    android:layout_marginStart="2dp"
                    app:layout_constraintTop_toTopOf="@id/option2"
                    app:layout_constraintBottom_toBottomOf="@id/option2"
                    app:layout_constraintStart_toEndOf="@id/option2"/>

                <TextView
                    android:id="@+id/Option2_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="13 Votes"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey_20"
                    android:background="@color/grey_20"
                    app:layout_constraintTop_toTopOf="@id/option2"
                    app:layout_constraintBottom_toBottomOf="@id/option2"
                    app:layout_constraintStart_toEndOf="@id/option2"/>

                <TextView
                    android:id="@+id/option2_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="12dp"
                    android:textColor="@color/grey_20"
                    android:background="@color/grey_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

                <com.mackhartley.roundedprogressbar.RoundedProgressBar
                    android:id="@+id/progressBar2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:rpbBackgroundColor="@color/grey_20"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="25dp"
                    app:rpbCornerRadius="20dp"
                    app:rpbProgressColor="@color/green_own"
                    app:rpbShowProgressText="false"
                    />

            </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/checkVotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="90dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/ll_v"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/grey_20"
                    android:background="@color/grey_20"
                    android:textSize="18dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:text="Check Votes"/>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>