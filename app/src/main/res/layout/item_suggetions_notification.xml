<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/card_likes"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/suggetions_notification_profile"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/SpecificCornerRounded"
            android:src="@drawable/round_background_mesibo_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/verification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginTop="-2dp"
            android:visibility="gone"
            android:src="@drawable/svg_verificationstatus"
            app:layout_constraintTop_toTopOf="@id/suggetions_notification_profile"
            app:layout_constraintEnd_toEndOf="@id/suggetions_notification_profile"/>

        <TextView
            android:id="@+id/suggetions_notification_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="User Name"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="14dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@id/ca_connect"
            app:layout_constraintStart_toEndOf="@+id/suggetions_notification_profile"
            app:layout_constraintTop_toTopOf="@id/suggetions_notification_profile" />

        <TextView
            android:id="@+id/suggetions_notification_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Hospitality Role"
            android:textColor="@color/grey_60"
            android:textSize="11dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/suggetions_notification_profile"
            app:layout_constraintTop_toBottomOf="@+id/suggetions_notification_name" />

        <androidx.cardview.widget.CardView
            android:id="@+id/ca_connect"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/green_own"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/suggetions_notification_profile"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/suggetions_notification_connect"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textAlignment="center"
                android:paddingVertical="6dp"
                android:background="@color/green_own"
                android:text="Accept"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ca_view_profile"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/ca_connect"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/suggetions_notification_view"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/green_own"
                android:textSize="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textAlignment="center"
                android:paddingVertical="6dp"
                android:background="@color/black"
                android:text="VIEW PROFILE"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey_60"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/suggetions_notification_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>