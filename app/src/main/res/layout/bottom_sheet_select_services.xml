<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="20dp"
    android:background="@drawable/top_round">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/syjt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your brand services?"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/syjh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your preferd services -"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="11dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/syjt"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/white">
        <EditText
            android:id="@+id/search_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search for services"
            android:textColorHint="@color/grey_40"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Body1"
            android:background="@null"
            android:padding="12dp"
            android:singleLine="true"
            android:maxLines="1"
            android:drawableEnd="@drawable/svg_search"/>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/location_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/addService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textAlignment="center"
            android:paddingVertical="14dp"
            android:paddingHorizontal="8dp"
            android:background="@color/suggested_job_yellow"
            android:text="ADD"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>

</androidx.core.widget.NestedScrollView>