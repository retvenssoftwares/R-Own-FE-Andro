                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/po8yt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp">

                    <TextView
                        android:id="@+id/option1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textAlignment="center"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginStart="12dp"
                        android:text="Hostels"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/greyvote_vector"
                        android:layout_marginStart="2dp"
                        app:layout_constraintTop_toTopOf="@id/option1"
                        app:layout_constraintBottom_toBottomOf="@id/option1"
                        app:layout_constraintStart_toEndOf="@id/option1"/>

                    <TextView
                        android:id="@+id/Option1_votes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:text="0 Votes"
                        android:textSize="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/grey_40"
                        app:layout_constraintTop_toTopOf="@id/option1"
                        app:layout_constraintBottom_toBottomOf="@id/option1"
                        app:layout_constraintStart_toEndOf="@id/option1"/>

                    <TextView
                        android:id="@+id/option1_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.mackhartley.roundedprogressbar.RoundedProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:rpbBackgroundColor="#CFDFBD"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="25dp"
                        app:rpbCornerRadius="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/po8yt"
                        app:rpbProgress="0"
                        app:rpbProgressColor="@color/green_own"
                        app:rpbShowProgressText="false"
                        app:layout_constraintBottom_toBottomOf="parent"

                       />

<!--                </LinearLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>