<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp">

    <!--
    <include
        layout="@layout/reply_layout"
        android:visibility="gone"
        ></include>
        -->

    <FrameLayout
        android:id="@+id/reply_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"></FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reply_container">

        <TextView
            android:id="@+id/m_pheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text="This is heading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff999999"
            android:textStyle="italic"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/m_piclayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_pheading"
            android:layout_margin="0dp"
            android:padding="0dp">

            <!-- We now create this dynamically if needed
        <MessagingModuleModule.ThumbnailProgressView
            android:id="@+id/m_picture"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:visibility="visible"
            android:layout_marginBottom="-9dp"
            />

            -->
        </FrameLayout>

        <LinearLayout
            android:id="@+id/m_titlelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_piclayout"
            android:layout_marginBottom="3dp"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/m_ptitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"
                android:layout_marginBottom="-2dp"
                android:autoLink="web"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:singleLine="false"
                android:text="This is title"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/m_psubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="-2dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:singleLine="false"
                android:text="This is subtitle"
                android:textColor="@color/black_overlay"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <com.mesibo.emojiview.EmojiconTextView
            android:id="@+id/m_pmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_titlelayout"
            android:autoLink="web"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:singleLine="false"
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:visibility="visible" />


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tool="http://schemas.android.com/tools"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:id="@+id/postCard"
        app:cardElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/post_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            android:layout_marginTop="7dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/png_profile_post"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/verification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:layout_marginEnd="-4dp"
            android:layout_marginTop="-4dp"
            android:src="@drawable/svg_verificationstatus"
            app:layout_constraintTop_toTopOf="@id/post_profile"
            app:layout_constraintEnd_toEndOf="@id/post_profile"/>
        <TextView
            android:id="@+id/user_name_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="Karsten Dobrev"
            android:textSize="15dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintTop_toTopOf="@id/post_profile"
            app:layout_constraintBottom_toBottomOf="@id/post_profile"
            app:layout_constraintStart_toEndOf="@id/post_profile"/>



        <!--    <TextView-->
        <!--        android:id="@+id/post_user_dominican"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="Dominican Republic"-->
        <!--        android:textSize="10dp"-->
        <!--        android:fontFamily="@font/montserrat_regular"-->
        <!--        android:textColor="@color/grey_60"-->
        <!--        app:layout_constraintStart_toStartOf="@id/user_name_post"-->
        <!--        app:layout_constraintTop_toBottomOf="@id/post_user_type"/>-->

        <ImageView
            android:id="@+id/likedAnimation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="8dp"
            android:visibility="gone"
            android:src="@drawable/liked_vectore"
            app:layout_constraintTop_toTopOf="@id/Image"
            app:layout_constraintBottom_toBottomOf="@id/Image"
            app:layout_constraintEnd_toEndOf="@id/Image"
            app:layout_constraintStart_toStartOf="@id/Image"/>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="13dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/png_post"
            tool:background="@color/grey"
            app:shapeAppearanceOverlay="@style/SquareCornerImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/post_profile"
            app:layout_constraintStart_toStartOf="parent"/>



        <TextView
            android:id="@+id/user_id_on_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dobrev_karsten"
            android:textSize="11dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/post_profile"
            app:layout_constraintTop_toBottomOf="@id/Image"/>

        <TextView
            android:id="@+id/recentCommentByUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Every stay gives you a reason to smile :)"
            android:textSize="11dp"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_id_on_comment"
            app:layout_constraintTop_toTopOf="@id/user_id_on_comment"
            app:layout_constraintBottom_toBottomOf="@id/user_id_on_comment"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>