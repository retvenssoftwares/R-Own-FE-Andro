<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".NavigationFragments.exploreForUsers.blogs.BlogsDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llT">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/blog_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="-15dp"
        android:src="@drawable/png_post"
        app:shapeAppearanceOverlay="@style/SquareCornerImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/arrow_left"
                android:layout_margin="15dp"
                android:background="@drawable/round_corner_background"
                android:backgroundTint="@color/green_own"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="7"
        android:background="@drawable/transparent_bg"
        app:layout_constraintBottom_toBottomOf="@id/blog_pic"
        app:layout_constraintEnd_toEndOf="@id/blog_pic"
        app:layout_constraintStart_toStartOf="@id/blog_pic">

        <ImageView
            android:id="@+id/eye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/svg_eye"
            android:visibility="gone"
            app:tint="@color/white"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/reads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5k Reads"
            android:visibility="gone"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/eye"
            app:layout_constraintBottom_toBottomOf="@id/eye"
            app:layout_constraintTop_toTopOf="@id/eye"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userProfile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/png_post"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintEnd_toStartOf="@id/userName"
            app:layout_constraintBottom_toBottomOf="@id/eye"
            app:layout_constraintTop_toTopOf="@id/eye"/>
      <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sebastian Morgan"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintEnd_toStartOf="@id/date"
            app:layout_constraintBottom_toBottomOf="@id/eye"
            app:layout_constraintTop_toTopOf="@id/eye"/>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/date"/>

      <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12, January, 2023"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/eye"
            app:layout_constraintTop_toTopOf="@id/eye"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/blogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="What are some of the best luxury stays in Belgrade Serbia ?"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/blog_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/blogContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Belgrade, the capital city of Serbia, is a hidden gem that offers a unique blend of history, culture, and luxury. If you're planning a trip to Belgrade, you'll want to check out some of the best luxury stays the city has to offer.

First on the list is the Square Nine Hotel Belgrade. With its sleek and modern design, this hotel offers guests a luxurious and comfortable stay. The hotel's location is also ideal, as it is within walking distance of some of the city's top attractions.

Next up is the Metropol Palace, a stunning hotel that combines classic elegance with modern amenities. This hotel boasts a spa, fitness center, and a rooftop terrace with breathtaking views of the city. The Metropol Palace is perfect for those seeking a luxurious and indulgent stay.

For those looking for a more intimate and personalized experience, the Boutique Hotel Museum is a great option. This hotel is located in the heart of the city and offers guests a unique and memorable stay. The rooms are beautifully decorated with a mix of antique and modern furnishings, and the hotel's restaurant is a must-try for foodies.

Last but not least is the Hyatt Regency Belgrade, a five-star hotel that offers guests a luxurious and unforgettable stay. The hotel's rooms are spacious and elegantly designed, and the hotel's restaurant serves up some of the best cuisine in the city. The Hyatt Regency Belgrade also boasts a spa, fitness center, and indoor pool, making it the perfect place to relax and unwind.

Overall, Belgrade offers a plethora of luxurious and unique stays for travelers looking to indulge in the city's history and culture. Whether you opt for a modern, sleek hotel or a more intimate boutique hotel, you're sure to have a memorable stay in Belgrade."
        android:textSize="14dp"
        android:textColor="@color/grey_60"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/blogTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llT"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="7"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/like_post"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@drawable/svg_like_post"
            app:tint="@color/black"/>
        <ImageView
            android:id="@+id/comment"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@drawable/svg_post_comment"
            app:tint="@color/black"/>
        <ImageView
            android:id="@+id/share_post"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:src="@drawable/svg_share_post"
            app:tint="@color/black"/>
        <ImageView
            android:id="@+id/savePost"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@drawable/svg_save_post"
            app:tint="@color/black"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>