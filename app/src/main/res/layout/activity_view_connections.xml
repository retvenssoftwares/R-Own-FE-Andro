<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refreshLayout"
    android:background="@color/white"
    tools:context=".NavigationFragments.profile.viewConnections.ViewConnectionsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/re_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/community_btn"
            app:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Connections"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintStart_toEndOf="@id/re_backBtn"
            app:layout_constraintTop_toTopOf="@id/re_backBtn"
            app:layout_constraintBottom_toBottomOf="@id/re_backBtn"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_below="@+id/relative"
        app:layout_constraintTop_toBottomOf="@id/relative"/>

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:hint="search people..."
            android:textColorHint="@color/grey"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/searchbar"
            android:paddingRight="10dp"
            android:textSize="13dp"
            android:layout_below="@+id/relative"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_search_bg"
            />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/connectionsRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/searchBar"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>