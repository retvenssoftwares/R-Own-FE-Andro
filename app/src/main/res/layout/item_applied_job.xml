<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="6dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_applied_job"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:src="@drawable/png_blog"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        app:shapeAppearance="@style/SquareCornerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/applied_job_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Senior UI Designer"
        android:layout_marginHorizontal="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:textFontWeight="700"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@id/card_status"
        app:layout_constraintTop_toTopOf="@id/profile_applied_job"
        app:layout_constraintStart_toEndOf="@id/profile_applied_job"/>

    <TextView
        android:id="@+id/applied_job_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Shahpura â€¢ Jakarta, Indonesia"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@id/card_status"
        app:layout_constraintTop_toBottomOf="@id/applied_job_title"
        app:layout_constraintStart_toEndOf="@id/profile_applied_job"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="4dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/applied_job_location">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="6dp"
            android:paddingHorizontal="10dp"
            android:textAlignment="center"
            android:text="Scheduled"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14dp"
            android:background="#2196F3"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/linear_layout_jobs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="12dp"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@id/applied_job_location"
        app:layout_constraintStart_toEndOf="@id/profile_applied_job"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintTop_toBottomOf="@id/email_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/applied_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:paddingHorizontal="6dp"
                android:textAlignment="center"
                android:text="Full_Time"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="10dp"
                android:background="@color/black"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintTop_toBottomOf="@id/email_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/appiled_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:paddingHorizontal="6dp"
                android:textAlignment="center"
                android:text="Remote"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="10dp"
                android:background="@color/black"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_20"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_jobs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>