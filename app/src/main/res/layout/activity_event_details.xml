<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NavigationFragments.exploreForUsers.events.EventDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/review_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/community_btn"
            app:tint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Detail"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/review_backBtn"
            app:layout_constraintBottom_toBottomOf="@id/review_backBtn"
            app:layout_constraintStart_toEndOf="@id/review_backBtn"/>


        <ImageView
            android:id="@+id/community_detail_editBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/svg_heart"
            app:layout_constraintBottom_toBottomOf="@id/profile_username"
            app:layout_constraintTop_toTopOf="@id/profile_username"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/concert_cover"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:scaleType="centerCrop"
        android:elevation="10dp"
        android:layout_marginHorizontal="20dp"
        app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"
        android:src="@drawable/png_vendor"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/relative"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/concert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radiohead Concert "
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="18dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/concert_cover"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/concertPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:fontFamily="@font/montserrat_semibold"
        android:drawableStart="@drawable/doller_24"
        android:textSize="18dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/green_own"
        android:drawableTint="@color/green_own"
        app:layout_constraintTop_toBottomOf="@id/concert_cover"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/abt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Event"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="16dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/concert"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Odio elit tempus tristique viverra scelerisque. pellentesque phasellus nibh urna ipsum sollicitudin urna est enim..."
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/grey_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abt"
        app:layout_constraintStart_toStartOf="parent"/>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/concert_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:elevation="10dp"
        android:layout_marginHorizontal="20dp"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:src="@drawable/png_vendor"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about"/>

    <TextView
        android:id="@+id/concert_profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile name"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="14dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/concert_profile"
        app:layout_constraintBottom_toBottomOf="@id/concert_profile"
        app:layout_constraintTop_toTopOf="@id/concert_profile"/>

    <View
        android:id="@+id/devider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_20"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/concert_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/devider"
        app:layout_constraintStart_toStartOf="parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:drawableStart="@drawable/svg_google_pointer"
            android:drawablePadding="10dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="18dp"
            android:background="@color/black"
            android:text="Open in maps"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:drawableStart="@drawable/svg_cab"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:paddingVertical="15dp"
            android:paddingHorizontal="18dp"
            android:background="@color/black"
            android:text="Get a cab"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/green_own"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:paddingVertical="15dp"
            android:paddingHorizontal="18dp"
            android:background="@color/green_own"
            android:text="Book Now"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>