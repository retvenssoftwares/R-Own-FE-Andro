<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".NavigationFragments.jobforvendors.ViewAllPolpular">


    <ImageView
        android:layout_width="22dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:id="@+id/back_iv"
        android:src="@drawable/arrow_circle_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Popular in their fields"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textFontWeight="700"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="25dp"
        />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"
        android:background="#272A3D" />

    <EditText
        android:id="@+id/jobs_search_popular"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Search Posted Jobs"
        android:drawableEnd="@drawable/svg_search"
        android:padding="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="15dp"
        android:textColor="@color/grey_60"
        android:textColorHint="@color/grey_40"
        android:background="@drawable/searchboxusers"
        android:backgroundTint="@color/grey_5"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="496dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobs_search_popular" />

    <TextView
        android:id="@+id/empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Empty Data"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>