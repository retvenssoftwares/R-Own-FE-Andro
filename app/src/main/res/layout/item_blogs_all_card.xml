<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="290dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        android:layout_margin="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/blog_cover"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:elevation="8dp"
            android:layout_margin="8dp"
            app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"
            android:src="@drawable/png_blog"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_blog_type"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            android:layout_margin="6dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toTopOf="@id/blog_cover"
            app:layout_constraintStart_toStartOf="@id/blog_cover">

            <TextView
                android:id="@+id/blogCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                android:paddingHorizontal="12dp"
                android:textAlignment="center"
                android:text="Travel"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="12dp"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@color/white"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/blogs_card_like"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/svg_heart"
            android:elevation="10dp"
            android:layout_margin="6dp"
            app:layout_constraintTop_toTopOf="@id/blog_cover"
            app:layout_constraintEnd_toEndOf="@id/blog_cover"/>

        <TextView
            android:id="@+id/blog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            android:text="Thailand in budget"
            android:textSize="14dp"
            android:lines="2"
            android:maxLines="2"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/blog_cover"
            app:layout_constraintTop_toBottomOf="@id/blog_cover"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/read_more_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="14dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="3dp"
                android:paddingHorizontal="8dp"
                android:textAlignment="center"
                android:text="Read More"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="10dp"
                android:background="#EFF0F9"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/blogger_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/svg_add_bg"
            app:layout_constraintTop_toBottomOf="@id/blog_title"
            app:layout_constraintStart_toStartOf="@id/blog_cover"/>

    <TextView
        android:id="@+id/blogger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adventures Paul"
        android:textSize="9dp"
        android:singleLine="true"
        android:layout_marginHorizontal="6dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/blogger_profile"
        app:layout_constraintBottom_toBottomOf="@id/blogger_profile"
        app:layout_constraintTop_toTopOf="@id/blogger_profile"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_20"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toBottomOf="@id/blogger"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/blog_reads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="14dp"
            android:text="2.2k"
            android:visibility="gone"
            android:textSize="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginBottom="14dp"
            android:text="Reads"
            android:visibility="gone"
            android:textSize="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/blog_reads"/>

        <TextView
            android:id="@+id/blog_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="14dp"
            android:text="22 Oct, 2022"
            android:textSize="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/grey_40"
            app:layout_constraintStart_toEndOf="@id/r"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>