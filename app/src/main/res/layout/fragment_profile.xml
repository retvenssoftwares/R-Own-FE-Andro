<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refreshLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".NavigationFragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/community_btn"
            app:tint="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/profile_setting"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loading...."
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="16dp"
            android:layout_marginStart="18dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/profile_setting"
            app:layout_constraintBottom_toBottomOf="@id/profile_setting"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/profile_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/setting"
            android:rotation="90"
            app:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:src="@drawable/svg_user"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/relative"
        app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/verification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:src="@drawable/svg_verificationstatus"
            app:layout_constraintTop_toTopOf="@id/profile"
            app:layout_constraintEnd_toEndOf="@id/profile"/>
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loading...."
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintStart_toStartOf="@id/profile"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        app:layout_constraintStart_toStartOf="@id/profile_name"/>

        <TextView
            android:id="@+id/posts_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/posts"
            app:layout_constraintBottom_toTopOf="@id/posts"
            app:layout_constraintStart_toStartOf="@id/posts"/>

    <TextView
        android:id="@+id/posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintEnd_toStartOf="@id/connections"
        app:layout_constraintTop_toTopOf="@id/profile"
        app:layout_constraintBottom_toBottomOf="@id/profile"
        app:layout_constraintStart_toEndOf="@id/profile"/>

        <TextView
            android:id="@+id/connections_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/connections"
            app:layout_constraintBottom_toTopOf="@id/connections"
            app:layout_constraintStart_toStartOf="@id/connections"/>

    <TextView
        android:id="@+id/connections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connections"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/requests"
        app:layout_constraintTop_toTopOf="@id/posts"
        app:layout_constraintBottom_toBottomOf="@id/posts"
        app:layout_constraintStart_toEndOf="@id/posts"/>

    <TextView
        android:id="@+id/requests_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="14dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/requests"
        app:layout_constraintBottom_toTopOf="@id/requests"
        app:layout_constraintStart_toStartOf="@id/requests"/>

    <TextView
        android:id="@+id/requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requests"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/connections"
        app:layout_constraintBottom_toBottomOf="@id/connections"
        app:layout_constraintStart_toEndOf="@id/connections"/>

    <TextView
        android:id="@+id/bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Are you ready to begin your hospitality adventures with us ?"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="13dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/connections"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintStart_toStartOf="@id/profile"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/viewPP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/bio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lll2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="8dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/border"
                android:text="VIEW PROFESSIONAL PROFILE"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/lll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="12dp"
            android:background="@color/grey_5"
            app:layout_constraintTop_toBottomOf="@id/viewPP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="10dp"
                app:cardBackgroundColor="@color/green_own">

                <TextView
                    android:id="@+id/media"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:background="@color/white"
                    android:text="Media"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="10dp"
                app:cardBackgroundColor="@color/green_own">

                <TextView
                    android:id="@+id/polls"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:background="@color/grey_5"
                    android:text="Polls"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="10dp"
                app:cardBackgroundColor="@color/green_own">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:background="@color/grey_5"
                    android:text="Status"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/child_profile_fragments_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lll2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/shimmer_layout_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <include layout = "@layout/fragment_profile_shimmer"/>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>