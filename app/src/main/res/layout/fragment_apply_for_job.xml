<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".NavigationFragments.job.ApplyForJobFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/hots_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Search Jobs"
            android:drawableEnd="@drawable/svg_search"
            android:padding="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/grey_60"
            android:textColorHint="@color/grey_40"
            android:background="@drawable/searchboxusers"
            android:backgroundTint="@color/grey_5"/>

        <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empty Data"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="40dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/applied_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_tasks_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/shimmer_layout_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <include layout = "@layout/item_recent_job_shimmer"/>
                <include layout = "@layout/item_recent_job_shimmer"/>
                <include layout = "@layout/item_recent_job_shimmer"/>
                <include layout = "@layout/item_recent_job_shimmer"/>
                <include layout = "@layout/item_recent_job_shimmer"/>
                <include layout = "@layout/item_recent_job_shimmer"/>
                <include layout = "@layout/item_recent_job_shimmer"/>
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="@color/green_own"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:textSize="16dp"
            android:text="No more Jobs"
            android:visibility="visible"
            android:textStyle="bold"
            android:textColor="@color/text_color_subtitle"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>