<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:id="@+id/nav_header"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="50dp"
        app:cardElevation="18dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/share_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Share Profile"
                android:layout_marginStart="6dp"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/png_qr"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/share_p"
                app:layout_constraintStart_toStartOf="@id/share_p"
                app:layout_constraintEnd_toEndOf="@id/share_p"/>

            <TextView
                android:id="@+id/share_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Copy Profile URL"
                android:paddingHorizontal="5dp"
                android:layout_marginTop="4dp"
                android:paddingVertical="2dp"
                android:textColor="@color/white"
                android:textFontWeight="900"
                android:textSize="8dp"
                android:drawableEnd="@drawable/svg_link"
                android:drawablePadding="4dp"
                android:background="@drawable/interest_item_selected"
                app:layout_constraintTop_toBottomOf="@id/qr_code"
                app:layout_constraintStart_toStartOf="@id/qr_code"
                app:layout_constraintEnd_toEndOf="@id/qr_code"
                />

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@color/green_own"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/qr_code"
                app:layout_constraintTop_toTopOf="@id/qr_code"
                app:layout_constraintBottom_toBottomOf="@id/qr_code"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/nav_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                app:shapeAppearanceOverlay="@style/RoundedCornerImage"
                app:layout_constraintVertical_bias="0.4"
                app:layout_constraintHorizontal_bias="0.42"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginStart="6dp"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/nav_profile"
                app:layout_constraintTop_toTopOf="@id/nav_profile"
                />

            <TextView
                android:id="@+id/nav_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginStart="6dp"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/nav_profile"
                app:layout_constraintTop_toBottomOf="@id/user_name"
                />

            <TextView
                android:id="@+id/isComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Profile is 50% Complete"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="8dp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintTop_toBottomOf="@id/nav_phone"
                app:layout_constraintStart_toStartOf="@id/nav_phone"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_Bar"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                app:trackCornerRadius="8dp"
                app:indicatorColor="#A4D71D"
                app:trackColor="#CFDFBD"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/isComplete"
                app:layout_constraintStart_toStartOf="@id/isComplete"
                app:layout_constraintEnd_toEndOf="@id/isComplete"
                />

            <TextView
                android:id="@+id/complete_your_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete your profile"
                android:textColor="#A09E9E"
                android:textSize="11dp"
                android:textFontWeight="800"
                android:gravity="center_vertical"
                android:layout_marginTop="-3dp"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawableTint="@color/grey_40"
                android:fontFamily="@font/montserrat_semibold"
                app:layout_constraintStart_toStartOf="@id/progress_Bar"
                app:layout_constraintTop_toBottomOf="@id/progress_Bar"
                tools:ignore="RtlCompat" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/my_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="18dp"
        app:cardElevation="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY ACCOUNT"
            android:textSize="12dp"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:textFontWeight="800"
            tools:ignore="RtlCompat" />
    </androidx.cardview.widget.CardView>


</LinearLayout>