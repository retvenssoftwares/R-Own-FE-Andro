<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:shapeAppearance="@style/SquareCornerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_recent_job"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/png_blog"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/view_job_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senior UI Designer"
            android:layout_marginHorizontal="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:textFontWeight="700"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_toEndOf="@+id/profile_recent_job"/>

        <TextView
            android:id="@+id/view_job_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shahpura â€¢ Jakarta, Indonesia"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/grey_60"
            android:layout_alignParentEnd="true"

            android:layout_toEndOf="@+id/profile_recent_job"
            android:layout_below="@+id/view_job_designation"/>


    </RelativeLayout>


    <TextView
        android:id="@+id/view_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:paddingHorizontal="2dp"
        android:text="15K"
        android:textAlignment="center"
        android:textColor="@color/green_own"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative" />


    <LinearLayout
        android:id="@+id/linear_layout_recent_jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_layout">

            <TextView
                android:id="@+id/view_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:fontFamily="@font/montserrat_semibold"
                android:maxWidth="110dp"
                android:minWidth="90dp"
                android:maxLines="1"
                android:paddingHorizontal="5dp"
                android:paddingVertical="8dp"
                android:text="Fulltime"
                android:textSize="@dimen/_11sdp"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_layout">

            <TextView
                android:id="@+id/view_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:fontFamily="@font/montserrat_semibold"
                android:maxWidth="110dp"
                android:minWidth="90dp"
                android:maxLines="1"
                android:paddingHorizontal="5dp"
                android:paddingVertical="8dp"
                android:text="Remote"
                android:textSize="@dimen/_11sdp"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:background="#ACD037"
        android:backgroundTint="#ACD037"
        android:id="@+id/btncard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_recent_jobs"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:text="View Details"
            android:textColor="#272A3D"
            android:fontFamily="@font/montserrat_semibold"
            />
    </androidx.cardview.widget.CardView>



    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_20"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btncard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>