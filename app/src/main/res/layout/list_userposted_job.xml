<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_recent_job"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:src="@drawable/png_blog"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        app:shapeAppearance="@style/SquareCornerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_job_designation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Senior UI Designer"
        android:layout_marginHorizontal="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:textFontWeight="700"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/profile_recent_job"
        app:layout_constraintStart_toEndOf="@id/profile_recent_job" />

    <TextView
        android:id="@+id/view_job_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Shahpura â€¢ Jakarta, Indonesia"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/view_job_designation"
        app:layout_constraintStart_toEndOf="@id/profile_recent_job" />

    <TextView
        android:id="@+id/view_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        android:textAlignment="center"
        android:text="15K"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/green_own"
        app:layout_constraintTop_toBottomOf="@id/view_job_location"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/linear_layout_recent_jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="22dp"
        android:padding="5dp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/view_job_location"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/view_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:textAlignment="center"
                android:text="Fulltime"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="10dp"
                android:background="@color/black"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:id="@+id/view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:textAlignment="center"
                android:text="Remote"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="10dp"
                android:background="@color/black"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:background="#ACD037"
        android:backgroundTint="#ACD037"
        android:id="@+id/btncard"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_recent_jobs"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:text="View Details"
            android:textColor="#272A3D"
            android:fontFamily="@font/montserrat_semibold" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_20"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/btncard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
