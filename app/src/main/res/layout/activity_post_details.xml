                <TextView
                    android:id="@+id/post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="2W"
                    android:textColor="@color/grey_60"
                    android:textSize="11dp"
                    app:layout_constraintEnd_toEndOf="@id/viewPager"
                    app:layout_constraintBottom_toBottomOf="@id/user_name_post"
                    app:layout_constraintTop_toTopOf="@id/user_name_post" />

                <ImageView
                    android:id="@+id/likedAnimation"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:elevation="8dp"
                    android:visibility="gone"
                    android:src="@drawable/liked_vectore"
                    app:layout_constraintTop_toTopOf="@id/viewPager"
                    app:layout_constraintBottom_toBottomOf="@id/viewPager"
                    app:layout_constraintEnd_toEndOf="@id/viewPager"
                    app:layout_constraintStart_toStartOf="@id/viewPager"/>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="13dp"
                    android:layout_marginHorizontal="15dp"
                    android:src="@drawable/png_post"
                    app:shapeAppearanceOverlay="@style/SquareCornerImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/post_profile"
                    app:layout_constraintStart_toStartOf="parent"/>

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/round_corner_background"
                    android:backgroundTint="@color/grey"
                    app:layout_constraintTop_toBottomOf="@id/viewPager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:elevation="4dp"/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="dobrev_karsten"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    app:layout_constraintStart_toStartOf="@id/post_profile"
                    app:layout_constraintTop_toBottomOf="@id/indicator" />

                <TextView
                    android:id="@+id/caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Every stay gives you a reason to smile :)"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/user_name"
                    app:layout_constraintTop_toTopOf="@+id/user_name" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    app:layout_constraintStart_toStartOf="@id/viewPager"
                    app:layout_constraintTop_toBottomOf="@id/user_name">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/like_post"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:src="@drawable/svg_like_post"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/comment"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:src="@drawable/svg_post_comment"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/savePost"
                    android:layout_width="20dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/svg_save_post"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout"
                    app:layout_constraintTop_toBottomOf="@+id/user_name"
                    app:tint="@color/black" />


            </androidx.constraintlayout.widget.ConstraintLayout>

