    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/sv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileOnComment"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/png_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/addThoughts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Add your thoughts about dobrev_karsten..."
            android:textColorHint="@color/grey_60"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Body1"
            android:background="@null"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintEnd_toStartOf="@id/fe"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/profileOnComment"/>

        <TextView
            android:id="@+id/fe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="POST"
            android:textColor="@color/blue"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
