<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    android:layout_margin="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/blog_cover"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:elevation="8dp"
            android:layout_margin="8dp"
            app:shapeAppearanceOverlay="@style/SquareCornerImage"
            android:src="@drawable/png_blog"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_blog_type"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_margin="6dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toTopOf="@id/blog_cover"
            app:layout_constraintStart_toStartOf="@id/blog_cover">

            <TextView
                android:id="@+id/blogType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                android:paddingHorizontal="12dp"
                android:textAlignment="center"
                android:text="Concert"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="12dp"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@color/white"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/blog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            android:text="Radiohead Concert"
            android:textSize="14dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/blog_cover"
            app:layout_constraintTop_toBottomOf="@id/blog_cover"/>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/blogger_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/svg_add_bg"
            app:layout_constraintTop_toBottomOf="@id/blog_title"
            app:layout_constraintStart_toStartOf="@id/blog_cover"/>

    <TextView
        android:id="@+id/blogger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adventures Paul"
        android:textSize="9dp"
        android:layout_marginHorizontal="6dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/blogger_profile"
        app:layout_constraintBottom_toBottomOf="@id/blogger_profile"
        app:layout_constraintTop_toTopOf="@id/blogger_profile"/>

        <TextView
            android:id="@+id/event_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="281"
            android:textSize="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Participants"
            android:textSize="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/blog_date"
            app:layout_constraintBottom_toBottomOf="@id/event_participants"
            app:layout_constraintStart_toEndOf="@id/event_participants"/>

        <TextView
            android:id="@+id/blog_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="14dp"
            android:text="22 Oct, 2022"
            android:textSize="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/grey_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>