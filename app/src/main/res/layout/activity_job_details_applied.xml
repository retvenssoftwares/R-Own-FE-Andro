<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".NavigationFragments.job.JobDetailsAppliedActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/back_jobs_details"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_back_24"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Detail"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/back_jobs_details"
        app:layout_constraintStart_toEndOf="@id/back_jobs_details"
        app:layout_constraintEnd_toStartOf="@id/save_jobs_details"/>

    <ImageView
        android:id="@+id/save_jobs_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/svg_jobs_explore"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_jobs_details"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/png_blog"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/SquareCornerImageForCards"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/back_jobs_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/job_name_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senior Sales Manager"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/profile_jobs_details"
        app:layout_constraintStart_toEndOf="@id/back_jobs_details"
        app:layout_constraintEnd_toStartOf="@id/save_jobs_details"/>
    <TextView
        android:id="@+id/location_job_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marriot • Jaipur, India"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="14dp"
        android:textColor="@color/grey_60"
        app:layout_constraintTop_toBottomOf="@id/job_name_details"
        app:layout_constraintStart_toEndOf="@id/back_jobs_details"
        app:layout_constraintEnd_toStartOf="@id/save_jobs_details"/>

    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintTop_toBottomOf="@id/location_job_details"
        app:layout_constraintStart_toEndOf="@id/back_jobs_details"
        app:layout_constraintEnd_toStartOf="@id/save_jobs_details">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_job_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textAlignment="center"
                android:paddingVertical="5dp"
                android:paddingHorizontal="12dp"
                android:background="#D6E4FF"
                android:text="Fulltime"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textAlignment="center"
                android:paddingVertical="5dp"
                android:paddingHorizontal="12dp"
                android:background="#D6E4FF"
                android:text="Onsite"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textAlignment="center"
                android:paddingVertical="5dp"
                android:paddingHorizontal="12dp"
                android:background="#D6E4FF"
                android:text="Senior"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_for_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintTop_toBottomOf="@id/ll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:id="@+id/description_job_card_text_applied"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:background="@color/black"
                android:text="Description"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:id="@+id/company_job_card_text_applied"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:background="@color/white"
                android:text="Company"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/green_own">

            <TextView
                android:id="@+id/activities_job_card_text_applied"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAlignment="center"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:background="@color/white"
                android:text="Activities"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_desc_applied"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_for_t"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Description"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginStart="18dp"/>
            <TextView
                android:id="@+id/description_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ll_for_t"
                android:text="Your role as the UI Designer is to use interactive components on various platforms (web, desktop and mobile). This will include producing high-fidelity mock-ups, iconography, UI illustrations/graphics, and other graphic elements. As the UI Designer, you will be supporting the wider design team with the internal Design System, tying together the visual language. You will with other UI and UX Designers, Product Managers, and Engineering teams in a highly customer-focused agile environment to help define the vision of the products."
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="3dp"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill Required"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="12dp"
                android:layout_marginStart="18dp"
                app:layout_constraintTop_toBottomOf="@id/description_job"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/skills_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" high-fidelity mock-ups, iconography, UI illustrations/graphics, and other graphic elements. As the UI Designer, you will be supporting the wider design team with the internal Design System, tying together the visual language. You will with other UI and UX Designers, Product Managers, and Engineering teams in a highly customer-focused agile environment to help define the vision of the products."
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="3dp"
                android:layout_marginStart="18dp"
                app:layout_constraintTop_toBottomOf="@id/sj"
                app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_company_applied"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ll_for_t"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Details"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginStart="18dp"/>
            <TextView
                android:id="@+id/companyD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ll_for_t"
                android:text="Your role as the UI Designer is to use interactive components on various platforms (web, desktop and mobile). This will include producing high-fidelity mock-ups, iconography, UI illustrations/graphics, and other graphic elements. As the UI Designer, you will be supporting the wider design team with the internal Design System, tying together the visual language. You will with other UI and UX Designers, Product Managers, and Engineering teams in a highly customer-focused agile environment to help define the vision of the products."
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="3dp"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/cw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Websites"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="12dp"
                android:layout_marginStart="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.website.com"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="3dp"
                android:layout_marginStart="18dp"/>
        </LinearLayout>
        <!--____________________________________________ Activities Section_________________________________________-->
        <LinearLayout
            android:id="@+id/ll_activities_applied"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ll_for_t"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Applied for the job"
                    android:textSize="15dp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Successfully, applied for the job and \nuploaded the resume."
                    android:textSize="12dp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/grey_60"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/svg_tick"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employer viewed your resume "
                    android:textSize="15dp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employer, successfully viewed your resume"
                    android:textSize="12dp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/grey_60"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/svg_tick"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Status "
                    android:textSize="15dp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On hold/scheduled/criteria dosen’t matched "
                    android:textSize="12dp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/grey_60"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/rounded_image"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Final Status "
                    android:textSize="15dp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hired/Rejected/Further Round"
                    android:textSize="12dp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/grey_60"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/rounded_image"/>

            </RelativeLayout>


        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/green_own"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textAlignment="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="10dp"
            android:background="@color/grey_40"
            android:text="Applied"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>