<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Dashboard.profileCompletion.frags.BioGenderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_complete_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/svg_person_account"
            app:shapeAppearance="@style/RoundedCornerImage"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.11"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_complete_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Arjun"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/user_complete_profile"
            app:layout_constraintStart_toEndOf="@id/user_complete_profile"
            app:layout_constraintTop_toTopOf="@id/user_complete_profile"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="11dp"
            android:text="Letâ€™s gather some interesting information about you to get a best experience"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_complete_name"
            app:layout_constraintStart_toStartOf="@id/user_complete_name" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@id/user_complete_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Bio"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bioEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:maxLength="150"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:background="@color/green_own"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/text_h4"
            app:layout_constraintBottom_toBottomOf="@id/text_h4"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/text_h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="How do you identify ?"
            android:textColor="@color/green_own"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/view4"
            app:layout_constraintTop_toBottomOf="@id/ll"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/green_own"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/text_h4"
            app:layout_constraintBottom_toBottomOf="@id/text_h4"
            app:layout_constraintStart_toEndOf="@id/text_h4"
            app:layout_constraintEnd_toEndOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/ll_for_n"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_h4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@color/white">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textAlignment="center"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:text="Male"/>

                        <ImageView
                            android:id="@+id/maleImg"
                            android:layout_marginEnd="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_union"
                            android:tintMode="multiply"
                            app:tint="@color/white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textAlignment="center"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:text="Female"/>

                        <ImageView
                            android:id="@+id/femaleImg"
                            android:layout_marginEnd="6dp"
                            app:tint="@color/green_own"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tintMode="multiply"
                            android:src="@drawable/svg_union"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:id="@+id/nonBinary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textAlignment="center"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:text="Non Binary"/>

                        <ImageView
                            android:id="@+id/nonBinaryImg"
                            android:layout_marginEnd="6dp"
                            app:tint="@color/green_own"
                            android:tintMode="multiply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_union"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:id="@+id/preferNotSay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textAlignment="center"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp"
                            android:text="Prefer not to say"/>

                        <ImageView
                            android:id="@+id/preferNotSayImg"
                            android:layout_marginEnd="6dp"
                            app:tint="@color/green_own"
                            android:tintMode="multiply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_union"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_complete_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="45dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="11dp"
            app:cardBackgroundColor="@color/grey_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_for_n">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:text="@string/continu"
                android:fontFamily="@font/montserrat_regular"
                android:textFontWeight="600"
                android:textSize="22dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>