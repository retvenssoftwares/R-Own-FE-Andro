    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_60"
        android:layout_marginHorizontal="30dp"/>

    <RelativeLayout
        android:id="@+id/report_8"
