<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NavigationFragments.exploreForUsers.jobExplore.ExploreJobsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_sj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/search_explore_peoples"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search for peoples"
            android:textColorHint="@color/grey_40"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Body1"
            android:background="@null"
            android:padding="12dp"
            android:singleLine="true"
            android:maxLines="1"
            android:drawableEnd="@drawable/svg_search"/>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/explore_peoples_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/card_sj"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toTopOf="@id/progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_sj"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:progressTint="@color/green_own"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/explore_peoples_recycler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_tasks_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_below="@id/card_sj"
        app:layout_constraintTop_toBottomOf="@id/card_sj">

        <LinearLayout
            android:id="@+id/shimmer_layout_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>
            <include layout="@layout/shimmer_notification"/>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>
    <TextView
        android:id="@+id/empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Empty Data"
        android:visibility="gone"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_below="@id/card_sj"
        app:layout_constraintTop_toBottomOf="@id/card_sj"/>

    <ImageView
        android:id="@+id/errorImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/svg_nothing"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/card_sj"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignTop="@id/card_sj"
        android:layout_marginTop="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>