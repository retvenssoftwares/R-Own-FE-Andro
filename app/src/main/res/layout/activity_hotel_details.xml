<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".NavigationFragments.exploreForUsers.hotels.HotelDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/vendor_image"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            android:src="@color/black"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="5dp"
            app:shapeAppearanceOverlay="@style/SquareCornerImageM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:drawableStart="@drawable/svg_navigation_location"
            android:textSize="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="5dp"
            app:layout_constraintStart_toStartOf="@id/vendor_image"
            app:layout_constraintBottom_toBottomOf="@id/vendor_image"/>

        <LinearLayout
            android:id="@+id/llh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/vendor_image"
            app:layout_constraintEnd_toEndOf="@id/vendor_image">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/grey_40">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:elevation="10dp"
                    android:layout_margin="5dp"
                    app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"
                    android:src="@drawable/png_vendor"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/grey_40">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:elevation="10dp"
                    android:layout_margin="5dp"
                    app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"
                    android:src="@drawable/png_vendor"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/grey_40">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:elevation="10dp"
                    android:layout_margin="5dp"
                    app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"
                    android:src="@drawable/png_vendor"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/hotelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Paradise Inn"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/vendor_image"
            app:layout_constraintEnd_toStartOf="@id/hotel_card_like"
            app:layout_constraintStart_toStartOf="parent"/>

        <RatingBar
            android:id="@+id/rating_barHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"
            android:stepSize="3"
            android:numStars="5"
            android:layout_marginBottom="5dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            app:layout_constraintTop_toBottomOf="@id/hotelName"
            app:layout_constraintStart_toStartOf="@id/hotelName"/>

        <ImageView
            android:id="@+id/hotel_card_like"
            android:layout_width="80dp"
            android:layout_height="74dp"
            android:src="@drawable/svg_like"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/vendor_image"
            app:layout_constraintEnd_toEndOf="@id/llh"/>

        <TextView
            android:id="@+id/over"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rating_barHotel"
            app:layout_constraintEnd_toStartOf="@id/hotel_card_like"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/description_hotel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Paradise Inn is a luxurious 7-star hotel that offers a one-of-a-kind experience for guests seeking the ultimate in comfort and elegance. With its stunning architecture, world-class amenities, and unparalleled service, Paradise Inn is the perfect destination for those looking to indulge in the finest things in life."
            android:textSize="14dp"
            android:textColor="@color/grey_60"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/over"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_rh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/openReview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:layout_marginVertical="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/black_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAlignment="center"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="18dp"
                    android:background="@drawable/black_border"
                    android:text="Reviews"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAlignment="center"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="18dp"
                    android:background="@color/suggested_job_yellow"
                    android:text="Book Now"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>