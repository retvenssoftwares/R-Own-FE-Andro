<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Dashboard.profileCompletion.frags.LocationFragment">


    <ImageView
        android:id="@+id/user_complete_profile"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_image"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <TextView
        android:id="@+id/user_complete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Hi Prashant Mishra"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/user_complete_profile"
        app:layout_constraintStart_toEndOf="@id/user_complete_profile"
        app:layout_constraintTop_toTopOf="@id/user_complete_profile"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="1dp"
        android:text="Let’s gather some interesting information about you to \nget a best experience"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="8dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/user_complete_name"
        app:layout_constraintStart_toStartOf="@id/user_complete_name" />

    <TextView
        android:id="@+id/user_complete_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="What’s your location?"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/user_complete_profile"
        app:layout_constraintStart_toStartOf="@id/user_complete_profile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Meet peoples, vendors, hotel owners, and interesting facts near your area"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="8dp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/user_complete_text"
        app:layout_constraintStart_toStartOf="@id/user_complete_profile"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_location_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Location"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/black"
        app:endIconDrawable="@drawable/png_location"
        app:endIconMode="custom"
        app:endIconTint="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/user_complete_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:text="Indore, Madhya Pradesh"
            android:editable="false"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_location_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="45dp"
        app:cardElevation="6dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:text="Next"
            android:fontFamily="@font/montserrat_regular"
            android:textFontWeight="600"
            android:textSize="22dp"
            android:background="@color/green_own"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>