<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Dashboard.profileCompletion.frags.LocationFragment">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_complete_profile1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/svg_person_account"
        app:shapeAppearance="@style/RoundedCornerImage"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_complete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Arjun"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/user_complete_profile1"
        app:layout_constraintStart_toEndOf="@id/user_complete_profile1"
        app:layout_constraintTop_toTopOf="@id/user_complete_profile1"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="11dp"
        android:text="Let’s gather some interesting information about you to get a best experience"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_complete_name"
        app:layout_constraintStart_toStartOf="@id/user_complete_name" />

    <TextView
        android:id="@+id/user_complete_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="What’s your location?"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/user_complete_profile1"
        app:layout_constraintStart_toStartOf="@id/user_complete_profile1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Meet peoples, vendors, hotel owners, and interesting facts near your area"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="8dp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/user_complete_text"
        app:layout_constraintStart_toStartOf="@id/user_complete_profile1"/>


    <LinearLayout
        android:id="@+id/postsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/user_complete_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_location_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Country"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/black"
        app:endIconDrawable="@drawable/png_location"
        app:endIconMode="custom"
        app:endIconTint="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_location_country"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="false"
            android:text="Select Your Location"
            android:editable="false"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_location_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="State"
        android:visibility="gone"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/black"
        app:endIconDrawable="@drawable/png_location"
        app:endIconMode="custom"
        app:endIconTint="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_location_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="false"
            android:text="Select Your State"
            android:editable="false"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_location_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="City"
        android:visibility="gone"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/black"
        app:endIconDrawable="@drawable/png_location"
        app:endIconMode="custom"
        app:endIconTint="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_location_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="false"
            android:text="Select Your City"
            android:editable="false"/>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>

<androidx.cardview.widget.CardView
        android:id="@+id/card_location_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="45dp"
        app:cardElevation="6dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="11dp"
        app:cardBackgroundColor="@color/grey_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:text="Next"
            android:fontFamily="@font/montserrat_regular"
            android:textFontWeight="600"
            android:textSize="22dp"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/postsLayout"
        android:layout_marginTop="15dp"
        android:text="OR"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:fontFamily="@font/montserrat_semibold"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/autofetch"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/green_own"
        app:layout_constraintTop_toBottomOf="@+id/or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="location"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/vector_gps"
            android:layout_marginStart="5dp"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>