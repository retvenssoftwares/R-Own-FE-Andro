<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NavigationFragments.profile.UserDetailsActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#272A3D"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/community_detail_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/community_btn"
            app:tint="@color/green_own"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/vendor_profile"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            android:src="@drawable/svg_user"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/vendor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karsten Dobrev"
            android:textSize="20dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/vendor_profile"
            app:layout_constraintEnd_toEndOf="@id/vendor_profile"
            app:layout_constraintStart_toStartOf="@id/vendor_profile"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="@color/black"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/round_corner_background"
            app:layout_constraintTop_toBottomOf="@id/vendor_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="14dp"/>

                <TextView
                    android:id="@+id/bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio not available"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="3dp"
                    android:layout_marginHorizontal="15dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_desc"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/addExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/black_border"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:tint="@color/black"
                        android:src="@drawable/svg_add"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="5dp"
                        android:textAlignment="center"
                        android:text="Add new"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="12dp"
                        android:textColor="@color/black"/>
                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="14dp"
                    app:layout_constraintTop_toTopOf="@id/addExperience"
                    app:layout_constraintBottom_toBottomOf="@id/addExperience"
                    app:layout_constraintStart_toStartOf="parent"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/addExperience"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card1"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/addEducation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/black_border"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:tint="@color/black"
                        android:src="@drawable/svg_add"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="5dp"
                        android:textAlignment="center"
                        android:text="Add new"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="12dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/editEducation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="1dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/black_border"
                    app:layout_constraintTop_toTopOf="@id/cardCollegeName"
                    app:layout_constraintBottom_toBottomOf="@id/cardCollegeName"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        app:tint="@color/black"
                        android:src="@drawable/svg_edit_pen"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="3dp"
                        android:paddingStart="5dp"
                        android:textAlignment="center"
                        android:text="Edit"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="10dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="14dp"
                    app:layout_constraintTop_toTopOf="@id/addEducation"
                    app:layout_constraintBottom_toBottomOf="@id/addEducation"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    app:tint = "@color/green_own"
                    android:src="@drawable/circle_gray_background"
                    app:layout_constraintTop_toBottomOf="@id/addEducation"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCollegeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    app:cardBackgroundColor="@color/green_own"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintBottom_toBottomOf="@id/circle2"
                    app:layout_constraintTop_toTopOf="@id/circle2"
                    app:layout_constraintStart_toEndOf="@id/circle2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="College Name"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="12dp"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/cardCollegeName"
                    app:layout_constraintStart_toStartOf="@id/cardCollegeName">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Session Years:"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="10dp"
                        app:layout_constraintTop_toTopOf="@id/edit"
                        app:layout_constraintBottom_toBottomOf="@id/edit"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2022 - 2024"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="13dp"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="16dp"
                        app:layout_constraintTop_toTopOf="@id/edit"
                        app:layout_constraintBottom_toBottomOf="@id/edit"
                        app:layout_constraintStart_toStartOf="parent"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>