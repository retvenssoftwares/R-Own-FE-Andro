<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NavigationFragments.profile.hotels.HotelsFragmentProfile">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        tools:listitem="@layout/item_profile_hotels_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addHotel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_tasks_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/shimmer_layout_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <include layout = "@layout/shimmer_profile_hotels_card"/>
            <include layout = "@layout/shimmer_profile_hotels_card"/>
            <include layout = "@layout/shimmer_profile_hotels_card"/>
            <include layout = "@layout/shimmer_profile_hotels_card"/>
            <include layout = "@layout/shimmer_profile_hotels_card"/>
            <include layout = "@layout/shimmer_profile_hotels_card"/>
            <include layout = "@layout/shimmer_profile_hotels_card"/>
            <include layout = "@layout/shimmer_profile_hotels_card"/>
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empty Data"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@id/addHotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/addHotel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textAlignment="center"
            android:paddingVertical="14dp"
            android:paddingHorizontal="8dp"
            android:background="@color/suggested_job_yellow"
            android:text="ADD HOTEL"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>