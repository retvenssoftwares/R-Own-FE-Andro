        <LinearLayout
            android:id="@+id/llh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/card_rate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topReviewRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/item_top_reviews"/>

        </LinearLayout>

        <TextView
            android:id="@+id/what_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What People Say"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/llh"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/what_people_recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            tools:listitem="@layout/item_what_people_say"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/what_p"/>

        <TextView
            android:id="@+id/error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reviews Not found"
            android:visibility="gone"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/what_people_recycler"/>
        <TextView
            android:id="@+id/allR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Reviews"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/error"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allReviewRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginHorizontal="8dp"
            tools:listitem="@layout/item_all_reviews"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/allR"/>

