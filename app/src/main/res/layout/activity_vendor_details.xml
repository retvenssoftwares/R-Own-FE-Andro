                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="3dp"
                    android:layout_marginHorizontal="12dp"
                    app:layout_constraintTop_toBottomOf="@id/rt"
                    app:layout_constraintStart_toEndOf="@id/im"/>

