<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".viewAll.vendorsDetails.VendorDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#272A3D"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/community_detail_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/community_btn"
            app:tint="@color/green_own"/>

    </RelativeLayout>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/vendor_profile"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="-40dp"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/relative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/vendor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Karsten Dobrev"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/vendor_profile"
        app:layout_constraintEnd_toEndOf="@id/vendor_profile"
        app:layout_constraintStart_toStartOf="@id/vendor_profile"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/servicesGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="40dp"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/interest_grid_item"
            android:verticalSpacing="5dp"
            app:layout_constraintVertical_bias="0.03"
            app:layout_constraintTop_toBottomOf="@id/vendor_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="6dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/servicesGrid"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor Description"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="14dp"/>

            <TextView
                android:id="@+id/vendorDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description not available"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="15dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_port"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="6dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_desc"
        app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portfolio Shared"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="14dp"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:elevation="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"
            android:background="@color/white"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:elevation="6dp"
            android:layout_marginStart="5dp"
            app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"
            android:background="@color/white"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:elevation="6dp"
            android:layout_marginStart="5dp"
            app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"/>

    </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
    android:id="@+id/layout_rh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    app:layout_constraintTop_toBottomOf="@id/card_port"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/addReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/green_own">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:paddingVertical="15dp"
            android:background="@color/suggested_job_yellow"
            android:text="Add a review"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHire"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_weight="2"
        android:clickable="true"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:text="Hire"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>

