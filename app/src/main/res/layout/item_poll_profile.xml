<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/post_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:shapeAppearanceOverlay="@style/RoundedCornerImage"
                android:layout_marginTop="7dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/png_profile_post"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/user_name_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="Karsten Dobrev"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                app:layout_constraintVertical_bias="0.02"
                app:layout_constraintTop_toTopOf="@id/post_profile"
                app:layout_constraintBottom_toBottomOf="@id/post_profile"
                app:layout_constraintStart_toEndOf="@id/post_profile"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel Influencer"
                android:textSize="11dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/grey_60"
                app:layout_constraintStart_toStartOf="@id/user_name_post"
                app:layout_constraintTop_toBottomOf="@id/user_name_post"/>

<!--            <TextView-->
<!--                android:id="@+id/post_user_dominican"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Dominican Republic"-->
<!--                android:textSize="10dp"-->
<!--                android:fontFamily="@font/montserrat_regular"-->
<!--                android:textColor="@color/grey_60"-->
<!--                app:layout_constraintStart_toStartOf="@id/user_name_post"-->
<!--                app:layout_constraintTop_toBottomOf="@id/post_user_type"/>-->

            <TextView
                android:id="@+id/post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2W"
                android:textSize="11dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/grey_60"
                app:layout_constraintTop_toBottomOf="@id/location"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/vi"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="22dp"
                android:background="@color/grey_40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/post_time"/>


            <TextView
                android:id="@+id/title_poll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="25dp"
                android:text="When Travelling, what do you guys prefer more ?"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/post_profile"
                app:layout_constraintTop_toBottomOf="@id/post_profile"/>

            <LinearLayout
                android:id="@+id/ll_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/title_poll"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="10dp"
                app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/voteOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/svg_rectangle_background"
                app:layout_constraintTop_toBottomOf="@id/title_poll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginStart="12dp"
                    android:text="Hostels"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/greyvote_vector"
                    android:layout_marginStart="2dp"
                    app:layout_constraintTop_toTopOf="@id/option1"
                    app:layout_constraintBottom_toBottomOf="@id/option1"
                    app:layout_constraintStart_toEndOf="@id/option1"/>

                <TextView
                    android:id="@+id/Option1_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:text="12 Votes"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey_40"
                    app:layout_constraintTop_toTopOf="@id/option1"
                    app:layout_constraintBottom_toBottomOf="@id/option1"
                    app:layout_constraintStart_toEndOf="@id/option1"/>

                <TextView
                    android:id="@+id/option1_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

                <com.mackhartley.roundedprogressbar.RoundedProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:rpbBackgroundColor="#CFDFBD"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="25dp"
                    app:rpbCornerRadius="20dp"
                    app:rpbProgress="0"
                    app:rpbProgressColor="@color/green_own"
                    app:rpbShowProgressText="false"
                   />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/voteOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp"

                android:background="@drawable/svg_rectangle_background"
                app:layout_constraintTop_toBottomOf="@id/title_poll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginStart="12dp"
                    android:text="Luxury Stays"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/greyvote_vector"
                    android:layout_marginStart="2dp"
                    app:layout_constraintTop_toTopOf="@id/option2"
                    app:layout_constraintBottom_toBottomOf="@id/option2"
                    app:layout_constraintStart_toEndOf="@id/option2"/>

                <TextView
                    android:id="@+id/Option2_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="13 Votes"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey_40"
                    app:layout_constraintTop_toTopOf="@id/option2"
                    app:layout_constraintBottom_toBottomOf="@id/option2"
                    app:layout_constraintStart_toEndOf="@id/option2"/>

                <TextView
                    android:id="@+id/option2_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

                <com.mackhartley.roundedprogressbar.RoundedProgressBar
                    android:id="@+id/progressBar2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:rpbBackgroundColor="#CFDFBD"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="25dp"
                    app:rpbCornerRadius="20dp"
                    app:rpbProgress="0"
                    app:rpbProgressColor="@color/green_own"
                    app:rpbShowProgressText="false"
                    />

            </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/checkVotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="90dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/ll_v"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/green_own"
                    android:textSize="18dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:background="@color/black"
                    android:text="Check Votes"/>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>