<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/post_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:shapeAppearanceOverlay="@style/RoundedCornerImage"
                android:layout_marginTop="12dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/png_profile_post"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/verification"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_marginEnd="-4dp"
                android:layout_marginTop="-4dp"
                android:src="@drawable/svg_verificationstatus"
                app:layout_constraintTop_toTopOf="@id/post_profile"
                app:layout_constraintEnd_toEndOf="@id/post_profile"/>

            <TextView
                android:id="@+id/user_name_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="Karsten Dobrev"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                app:layout_constraintVertical_bias="0.02"
                app:layout_constraintTop_toTopOf="@id/post_profile"
                app:layout_constraintBottom_toBottomOf="@id/post_profile"
                app:layout_constraintStart_toEndOf="@id/post_profile"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="11dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/grey_60"
                app:layout_constraintStart_toStartOf="@id/user_name_post"
                app:layout_constraintTop_toBottomOf="@id/user_name_post"/>

<!--            <TextView-->
<!--                android:id="@+id/post_user_dominican"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Dominican Republic"-->
<!--                android:textSize="10dp"-->
<!--                android:fontFamily="@font/montserrat_regular"-->
<!--                android:textColor="@color/grey_60"-->
<!--                app:layout_constraintStart_toStartOf="@id/user_name_post"-->
<!--                app:layout_constraintTop_toBottomOf="@id/post_user_type"/>-->

            <TextView
                android:id="@+id/post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2W"
                android:textSize="11dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/grey_60"
                app:layout_constraintTop_toTopOf="@id/user_name_post"
                app:layout_constraintBottom_toBottomOf="@id/user_name_post"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/vi"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="22dp"
                android:background="@color/grey_40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/post_profile"/>


            <TextView
                android:id="@+id/title_poll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="25dp"
                android:text="When Travelling, what do you guys prefer more ?"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/post_profile"
                app:layout_constraintTop_toBottomOf="@id/post_profile"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/votesOptionsrecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/title_poll"
                android:layout_marginHorizontal="30dp"
                />




            <androidx.cardview.widget.CardView
                android:id="@+id/checkVotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="90dp"
                app:cardBackgroundColor="@color/white"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/votesOptionsrecycler"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/green_own"
                    android:textSize="18dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:visibility="visible"
                    android:background="@color/black"
                    android:text="Check Votes"/>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>