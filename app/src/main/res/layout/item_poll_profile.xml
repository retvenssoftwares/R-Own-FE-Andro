<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/poll_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="12dp"
                android:text="2 WEEKS AGO"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/grey_40"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/title_poll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="18dp"
                android:text="When Travelling, what do you guys prefer more ?"
                android:textSize="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/poll_time"
                app:layout_constraintTop_toBottomOf="@id/poll_time"/>

            <LinearLayout
                android:id="@+id/ll_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/title_poll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/svg_rectangle_background"
                app:layout_constraintTop_toBottomOf="@id/title_poll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginStart="12dp"
                    android:text="Hostels"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/svg_union"
                    app:tint="@color/quantum_yellow900"/>

                <TextView
                    android:id="@+id/poll_time_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginStart="6dp"
                    android:text="12 Votes"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey_40"/>
            </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_Bar_yes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="50"
                    app:trackCornerRadius="8dp"
                    app:indicatorColor="#A4D71D"
                    app:trackColor="#CFDFBD"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/svg_rectangle_background"
                app:layout_constraintTop_toBottomOf="@id/title_poll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginStart="12dp"
                    android:text="Luxury Stays"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/svg_union"
                    app:tint="#272A3D"/>

                <TextView
                    android:id="@+id/poll_votes_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginStart="6dp"
                    android:text="13 Votes"
                    android:textSize="10dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey_40"/>



            </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_Bar_no"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="60"
                    app:trackCornerRadius="8dp"
                    app:indicatorColor="#272A3D"
                    app:trackColor="#CFDFBD"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="3dp" />

            </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="90dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/ll_v"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/green_own"
                    android:textSize="18dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:background="@color/black"
                    android:text="Check Votes"/>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>