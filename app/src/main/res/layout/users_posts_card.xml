<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:id="@+id/postCard"
    app:cardElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/post_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:layout_marginTop="7dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/png_profile_post"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_name_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Karsten Dobrev"
        android:textSize="15dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintTop_toTopOf="@id/post_profile"
        app:layout_constraintBottom_toBottomOf="@id/post_profile"
        app:layout_constraintStart_toEndOf="@id/post_profile"/>

    <TextView
        android:id="@+id/post_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Influencer"
        android:textSize="11dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        app:layout_constraintStart_toStartOf="@id/user_name_post"
        app:layout_constraintTop_toBottomOf="@id/user_name_post"/>

    <TextView
        android:id="@+id/post_user_dominican"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dominican Republic"
        android:textSize="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        app:layout_constraintStart_toStartOf="@id/user_name_post"
        app:layout_constraintTop_toBottomOf="@id/post_user_type"/>

<!--    <TextView-->
<!--        android:id="@+id/post_time"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="2W"-->
<!--        android:textSize="11dp"-->
<!--        android:layout_marginEnd="12dp"-->
<!--        android:fontFamily="@font/montserrat_regular"-->
<!--        android:textColor="@color/grey_60"-->
<!--        app:layout_constraintTop_toBottomOf="@id/post_user_type"-->
<!--        app:layout_constraintEnd_toEndOf="@id/viewPager"/>-->

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/png_post"
        app:shapeAppearanceOverlay="@style/SquareCornerImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_profile"
        app:layout_constraintStart_toStartOf="parent"/>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="55dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="4dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="6"
            android:background="@drawable/transparent_bg"
            app:layout_constraintBottom_toBottomOf="@id/viewPager"
            app:layout_constraintEnd_toEndOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="@id/viewPager">



            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginBottom="3dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/like_post"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:src="@drawable/svg_like_post" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="5k"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginBottom="3dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:src="@drawable/svg_post_comment" />

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="5k"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </LinearLayout>

<!--            <ImageView-->
<!--                android:id="@+id/share_post"-->
<!--                android:layout_width="10dp"-->
<!--                android:layout_height="26dp"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_marginBottom="4dp"-->
<!--                android:src="@drawable/svg_share_post" />-->

            <ImageView
                android:layout_width="10dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:layout_marginBottom="4dp"
                android:src="@drawable/svg_save_post"/>

        </LinearLayout>

        <TextView
                android:id="@+id/user_id_on_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dobrev_karsten"
                android:textSize="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/post_profile"
                app:layout_constraintTop_toBottomOf="@id/viewPager"/>

            <TextView
                android:id="@+id/recentCommentByUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Every stay gives you a reason to smile :)"
                android:textSize="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/user_id_on_comment"
                app:layout_constraintTop_toBottomOf="@id/viewPager"
                app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>