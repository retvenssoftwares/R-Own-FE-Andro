<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/post_liked_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/post_liked_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:shapeAppearanceOverlay="@style/RoundedCornerImage"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/svg_add_bg"/>

                <TextView
                    android:id="@+id/post_liked_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:text="Karsten Dobrev"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/post_liked_profile"
                    app:layout_constraintTop_toTopOf="@id/post_liked_profile"
                    app:layout_constraintStart_toEndOf="@id/post_liked_profile"/>

                <TextView
                    android:id="@+id/post_liked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="liked this post"
                    android:textSize="13dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/grey_60"
                    app:layout_constraintStart_toEndOf="@id/post_liked_person_name"
                    app:layout_constraintBottom_toBottomOf="@id/post_liked_person_name"
                    app:layout_constraintTop_toTopOf="@id/post_liked_person_name"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_20"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="30dp"/>

        </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/post_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/svg_add_bg"
        app:layout_constraintTop_toBottomOf="@id/post_liked_profile_layout"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_name_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Karsten Dobrev"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintTop_toTopOf="@id/post_profile"
        app:layout_constraintBottom_toBottomOf="@id/post_profile"
        app:layout_constraintStart_toEndOf="@id/post_profile"/>

    <TextView
        android:id="@+id/user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Influencer"
        android:textSize="13dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        app:layout_constraintStart_toStartOf="@id/user_name_post"
        app:layout_constraintTop_toBottomOf="@id/user_name_post"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dominican Republic"
        android:textSize="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        app:layout_constraintStart_toStartOf="@id/user_name_post"
        app:layout_constraintTop_toBottomOf="@id/user_type"/>

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2W"
        android:textSize="11dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        app:layout_constraintTop_toBottomOf="@id/user_type"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/post_pic"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/background_interest"
        app:shapeAppearanceOverlay="@style/SquareCornerImage"
        app:tint="@color/grey_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_profile"
        app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="6"
            android:background="@drawable/transparent_bg"
            app:layout_constraintBottom_toBottomOf="@id/post_pic"
            app:layout_constraintEnd_toEndOf="@id/post_pic"
            app:layout_constraintStart_toStartOf="@id/post_pic">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/svg_like_post"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/svg_post_comment"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/svg_share_post"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/svg_save_post"/>

        </LinearLayout>

            <TextView
                android:id="@+id/user_id_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dobrev_karsten"
                android:textSize="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/post_profile"
                app:layout_constraintTop_toBottomOf="@id/post_pic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Every stay gives you a reason to smile :)"
                android:textSize="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/user_id_post"
                app:layout_constraintTop_toBottomOf="@id/post_pic"
                app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>