<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:id="@+id/postCard"
    app:cardElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/post_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:layout_marginTop="7dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/svg_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/verification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:layout_marginEnd="-4dp"
            android:layout_marginTop="-4dp"
            android:src="@drawable/svg_verificationstatus"
            app:layout_constraintTop_toTopOf="@id/post_profile"
            app:layout_constraintEnd_toEndOf="@id/post_profile"/>
    <TextView
        android:id="@+id/user_name_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Karsten Dobrev"
        android:textSize="15dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintTop_toTopOf="@id/post_profile"
        app:layout_constraintBottom_toBottomOf="@id/post_profile"
        app:layout_constraintStart_toEndOf="@id/post_profile"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="11dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        app:layout_constraintStart_toStartOf="@id/user_name_post"
        app:layout_constraintTop_toBottomOf="@id/user_name_post"/>

<!--    <TextView-->
<!--        android:id="@+id/post_user_dominican"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Dominican Republic"-->
<!--        android:textSize="10dp"-->
<!--        android:fontFamily="@font/montserrat_regular"-->
<!--        android:textColor="@color/grey_60"-->
<!--        app:layout_constraintStart_toStartOf="@id/user_name_post"-->
<!--        app:layout_constraintTop_toBottomOf="@id/post_user_type"/>-->

        <ImageView
            android:id="@+id/likedAnimation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="8dp"
            android:visibility="gone"
            android:src="@drawable/liked_vectore"
            app:layout_constraintTop_toTopOf="@id/viewPager"
            app:layout_constraintBottom_toBottomOf="@id/viewPager"
            app:layout_constraintEnd_toEndOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="@id/viewPager"/>
    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2W"
        android:textSize="11dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_60"
        app:layout_constraintBottom_toBottomOf="@id/user_name_post"
        app:layout_constraintTop_toTopOf="@id/user_name_post"
        app:layout_constraintEnd_toEndOf="@id/viewPager"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/png_post"
        tool:background="@color/grey"
        app:shapeAppearanceOverlay="@style/SquareCornerImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_profile"
        app:layout_constraintStart_toStartOf="parent"/>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/round_corner_background"
            android:backgroundTint="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="4dp"/>

        <TextView
                android:id="@+id/user_id_on_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dobrev_karsten"
                android:textSize="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/post_profile"
                app:layout_constraintTop_toBottomOf="@id/indicator"/>

            <TextView
                android:id="@+id/recentCommentByUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Every stay gives you a reason to smile :)"
                android:textSize="11dp"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/user_id_on_comment"
                app:layout_constraintTop_toTopOf="@id/user_id_on_comment"
                app:layout_constraintBottom_toBottomOf="@id/user_id_on_comment"/>

        <LinearLayout
            android:id="@+id/postaction"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@id/user_id_on_comment"
            app:layout_constraintStart_toStartOf="@id/viewPager">

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="3dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/like_post"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:src="@drawable/svg_like_post"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/like_count"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="0"
                android:textSize="12dp"
                android:textAlignment="center"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="3dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/comment"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:src="@drawable/svg_post_comment"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/comment_count"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="0"
                android:textSize="12dp"
                android:textAlignment="center"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>


        <ImageView
            android:id="@+id/share_post"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/vector_savedd"
            app:layout_constraintStart_toEndOf="@+id/postaction"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="16dp"
            />

        <ImageView
            android:id="@+id/savePost"
            android:layout_width="20dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:src="@drawable/svg_save_post"
            app:tint="@color/black"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/user_id_on_comment"
            app:layout_constraintEnd_toEndOf="@id/viewPager"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>