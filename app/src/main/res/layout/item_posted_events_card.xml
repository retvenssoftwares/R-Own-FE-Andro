<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    android:layout_margin="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/blog_cover"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:elevation="8dp"
            android:layout_margin="8dp"
            app:shapeAppearanceOverlay="@style/SquareCornerImage"
            android:src="@drawable/png_blog"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_margin="6dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toTopOf="@id/blog_cover"
            app:layout_constraintEnd_toEndOf="@id/blog_cover">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/svg_edit_pencil"
                android:background="@color/white"
                app:tint="@color/black"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/blog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            android:text="Radiohead Concert"
            android:textSize="14dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/event_date"
            app:layout_constraintStart_toStartOf="@id/blog_cover"
            app:layout_constraintTop_toBottomOf="@id/blog_cover"/>


        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="14dp"
            android:text="22 Oct, 2022"
            android:textSize="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/grey_60"
            app:layout_constraintTop_toTopOf="@id/blog_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/scheduled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/blog_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/scheduledText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scheduled"
                android:textSize="14dp"
                android:textColor="@color/green_own"
                android:background="@color/black"
                android:padding="12dp"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_bold"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>