<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_allCommunity"
        android:layout_width="wrap_content"
        android:layout_height="148dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="7dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/view_all_bg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/svg_add_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/community_view_all_bg_btn"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/ic_right_arrow"
                app:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/view_all_bg"
                app:layout_constraintEnd_toEndOf="@id/view_all_bg"
                app:layout_constraintStart_toStartOf="@id/view_all_bg"
                app:layout_constraintTop_toTopOf="@id/view_all_bg" />

            <TextView
                android:id="@+id/tt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="View all communities"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="9dp"
                app:layout_constraintEnd_toEndOf="@id/view_all_bg"
                app:layout_constraintStart_toStartOf="@id/view_all_bg"
                app:layout_constraintTop_toBottomOf="@id/view_all_bg" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:paddingVertical="5dp"
                android:text="View"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tt" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>