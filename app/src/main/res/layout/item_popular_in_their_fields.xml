<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/popular_employees_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        android:src="@drawable/png_blog"
        android:padding="1dp"
        android:elevation="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="18dp"
        app:cardElevation="7dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/popular_employees_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/employee_looking_for_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Looking For"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/green_own"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/employee_front_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front Office"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_looking_for_item_popular"
                app:layout_constraintStart_toStartOf="@id/employee_looking_for_item_popular"/>

            <TextView
                android:id="@+id/employee_front_desk_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front Desk Reservation"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_front_item_popular"
                app:layout_constraintStart_toStartOf="@id/employee_front_item_popular"/>

            <TextView
                android:id="@+id/employee_vendor_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_front_desk_item_popular"
                app:layout_constraintStart_toStartOf="@id/employee_front_desk_item_popular"/>

            <TextView
                android:id="@+id/employee_indore_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indore"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_vendor_item_popular"
                app:layout_constraintStart_toStartOf="@id/employee_vendor_item_popular"/>

            <TextView
                android:id="@+id/employee_month_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_month"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_indore_item_popular"
                app:layout_constraintStart_toStartOf="@id/employee_indore_item_popular"/>

            <TextView
                android:id="@+id/employee_salary_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60 Lakhs p.a."
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_month_item_popular"
                app:layout_constraintStart_toStartOf="@id/employee_month_item_popular"/>

            <TextView
                android:id="@+id/employee_name_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Name"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="55dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/employee_role_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Developer"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_name_item_popular"
                app:layout_constraintStart_toStartOf="@id/employee_name_item_popular"/>

            <TextView
                android:id="@+id/employee_experience_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Year Experience"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_role_item_popular"
                app:layout_constraintStart_toStartOf="@id/employee_name_item_popular"/>

            <TextView
                android:id="@+id/employee_remote_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_experience_item_popular"
                app:layout_constraintStart_toStartOf="@id/employee_name_item_popular"/>

            <TextView
                android:id="@+id/employee_location_item_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_remote_item_popular"
                app:layout_constraintStart_toStartOf="@id/employee_name_item_popular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/employee_location_item_popular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="View Profile"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="18dp"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="14dp"
                    android:background="@color/suggested_job_yellow"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>