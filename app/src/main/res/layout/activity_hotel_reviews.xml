<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NavigationFragments.exploreForUsers.hotels.HotelReviewsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/review_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/community_btn"
            app:tint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/review_backBtn"
            app:layout_constraintBottom_toBottomOf="@id/review_backBtn"
            app:layout_constraintStart_toEndOf="@id/review_backBtn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/review_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:elevation="6dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:shapeAppearanceOverlay="@style/SquareCornerImageForCards"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/description_hotel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Paradise Inn is a luxurious 7-star hotel that offers a one-of-a-kind experience for guests seeking the ultimate in comfort and elegance."
        android:textSize="14dp"
        android:textColor="@color/grey_60"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toTopOf="@id/review_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/review_profile"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/addReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_weight="1"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/green_own"
        app:layout_constraintTop_toBottomOf="@id/review_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:paddingVertical="10dp"
            android:paddingHorizontal="18dp"
            android:background="@color/suggested_job_yellow"
            android:text="Add review"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="3dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addReview"
        app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="12dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/svg_star"
            android:layout_marginStart="12dp"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/rt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate 3.0"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/img"
            app:layout_constraintStart_toEndOf="@id/img"/>

        <TextView
            android:id="@+id/renre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.2K review and ratings"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/rt"
            app:layout_constraintStart_toEndOf="@id/img"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/card_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topReviewRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            tools:listitem="@layout/item_top_reviews"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/card_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="3dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/svg_star"
                    android:layout_margin="8dp"
                    app:layout_constraintVertical_bias="0.3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Great Behavior"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="@id/img"
                    app:layout_constraintStart_toEndOf="@id/img"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.5K review and ratings"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="3dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="3dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/svg_timer_y"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="#ADD134"
                    android:layout_margin="8dp"
                    android:padding="12dp"
                    app:layout_constraintVertical_bias="0.3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attentive staff"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="@id/img"
                    app:layout_constraintStart_toEndOf="@id/img"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.5K review and ratings"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="3dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="3dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/svg_worth_money"
                    android:layout_margin="8dp"
                    app:layout_constraintVertical_bias="0.3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Worth the money"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="@id/img"
                    app:layout_constraintStart_toEndOf="@id/img"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.5K review and ratings"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="3dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/what_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Reviews"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/llh"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allReviewRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        tools:listitem="@layout/item_what_people_say"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/what_p"/>

    <TextView
        android:id="@+id/error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reviews Not found"
        android:visibility="gone"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/allReviewRecycler"/>

</androidx.constraintlayout.widget.ConstraintLayout>